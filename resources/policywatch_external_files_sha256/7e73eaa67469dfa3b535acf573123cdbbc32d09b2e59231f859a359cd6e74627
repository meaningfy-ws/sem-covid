        var backColor = '#f0ffff';
        var actColor = 'white';
        var brdColor = 'black';
        function marcheaza(id_ttl, id) {
            /*id.style.backgroundColor=backColor;
            id_ttl.style.cursor='pointer';
            id.style.borderColor=brdColor;
            id.style.borderStyle='dashed';*/
        }
        function demarcheaza(id_ttl, id) {
            /*id.style.backgroundColor='transparent';
            id_ttl.style.cursor='default';
            id.style.borderColor=actColor;
            id.style.borderStyle='dotted';*/
        }
        function plusMinus(id1, id2) {
            if (id1.style.display == 'none') {
                id1.style.display = 'inline';
                id2.style.display = 'none';
            }
            else {
                id1.style.display = 'none';
                id2.style.display = 'inline';
            }
        }
        function setCursor(id, tipCursor) {
            id.style.cursor = tipCursor;
        }
    </script>
