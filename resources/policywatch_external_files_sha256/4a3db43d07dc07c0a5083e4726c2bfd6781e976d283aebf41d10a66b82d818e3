<script>
  document.addEventListener("DOMContentLoaded", function() {
    var input = document.getElementById('mod-finder-searchword161');
    autocomplete({
      input: input,
      fetch: function (text, update) {
        text = text.toLowerCase();
        // you can also use AJAX requests instead of preloaded data
        var request = new XMLHttpRequest();
        request.open('GET', '/component/finder/?task=suggestions.suggest&amp;format=json&amp;tmpl=component&q=' + text, true);

        request.onload = function () {
          if (this.status >= 200 && this.status < 400) {
            // Success!
            var data = JSON.parse(this.response)
            update(data.suggestions.map(function(suggestion) {return {label:suggestion, value: suggestion}}))
          }
        };

        request.onerror = function () {
          // There was a connection error of some sort
        };

        request.send();
      },
      onSelect: function (item) {
        input.value = item.label;
      },
      className: 'autocomplete-suggestions'
    });
  });
</script>

