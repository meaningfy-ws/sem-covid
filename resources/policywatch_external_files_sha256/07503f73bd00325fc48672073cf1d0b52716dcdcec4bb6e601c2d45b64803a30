<script>

    function registrar_evento(_evento, _valor){
        tracker = ga.getAll()[0];
        tracker.send('event', _evento, _valor);
    }
  
    window.dataLayer = window.dataLayer || [];
    window.dataLayer.push({'event': 'new_subscriber'});
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());

    gtag('config', 'UA-51570747-1');

$(document).ready(function() {
      
      $('#btnewsletter').on('click', function(){
        
        grecaptcha.ready(function() {
            grecaptcha.execute('6LfA93cUAAAAAJ0hrHQDoCuei1vaLLp9LkzUCdYG', {action: 'homepage'}).then(function(token){
               // console.log('>>'+ token);
                $('#formNewsletter').prepend('<input type="hidden" name="tokenGoogle" value="' + token + '">');
                //console.log('>><lega');
                $('#formNewsletter').submit();
            });


        });
      });

      $('.js-form-validator-alerta').validator(customValidations()).on('submit', function (e) {
        $('.alert').hide();
        if (e.isDefaultPrevented() ) {
            lista_errores = "";
            $(this).find('.has-error').each(function(index, element){
                //console.log("hay errores");
                if ($(this).attr('data-mensaje-error') !== 'undefined' && $(this).attr('data-mensaje-error') !== undefined && $(this).attr('data-mensaje-error') !== ''){
                    lista_errores += '<li>'+$(this).attr('data-mensaje-error')+'</li>'; 
                }else{
                    //lista_errores += '<li>'+$(this).find('label').html()+'</li>';            
                }

            });
            if (lista_errores !=''){
                lista_errores = '<ul>'+lista_errores+'</ul>';
            }
            alerta = $(this).data('alerta');

            if ($(this).attr('data-mensaje-error') !== 'undefined' && $(this).attr('data-mensaje-error') !== undefined && $(this).attr('data-mensaje-error') !== ''){
                //$('#myModal').mostrar_msg("¡Lo sentimos!", $(this).data('mensaje-error')+lista_errores);
                $('#'+alerta).find('span').html($(this).attr('data-mensaje-error')+lista_errores);
                $('#'+alerta).show();
            }else{
                //$('#myModal').mostrar_msg("¡Lo sentimos!", "Revisa todos los datos antes de continuar"+lista_errores);              
                $('#'+alerta).find('span').html("Revise todos los datos antes de continuar"+lista_errores);
                $('#'+alerta).show();                
            }

        }
      });

      $('.js-hidden-div').on('click', function(){
            $(this).closest('.alert').hide();
      });

});

</script>


    

    <script>
        $(document).ready(function() {
        	$('.js-volver').click(function(){
        		document.location.href = '/actualidad';
        	});	

        	$('.js-marcar-favorito').click(function(){
            marcarFavorito($(this));
        	});
	          $('.js-desmarcar-favorito').click(function(){
	            desmarcarFavorito($(this));
	          });

	        function marcarFavorito (_elem){
	            var _id = _elem.closest('.noticia-corazon').attr('id');
	            var _total = $('#total_'+_id).html();
	            var _puntos = $('#total_'+_id).attr('total');
	            var _obj = _elem;

	            var data = '&id='+_id+'&total='+_total;
	            $.ajax({
	                    url: 'https://www.ceim.es/ajax/actuallies/favorito',
	                    type: 'POST',
	                    dataType: 'json',
	                    data: data,
	                })
	                .done(function(result) {
	                  //_obj.attr('data-valor', result);
	                  _puntos++;
	                  $('#total_'+_id).attr('total', _puntos);
	                  $('#total_'+_id).html('('+_puntos+')');
	                  $(_elem).addClass('activo');
	                  $(_elem).removeClass('js-marcar-favorito');
	                  $(_elem).addClass('js-desmarcar-favorito');
	                  $(_elem).unbind('click');
	                  $(_elem).bind('click', function(){ desmarcarFavorito($(this));});
	                })
	                .fail(function(result) {
	                });
	        }

	        function desmarcarFavorito (_elem){
	            var _id = _elem.closest('.noticia-corazon').attr('id');
	            var _total = $('#total_'+_id).html();
	            var _puntos = $('#total_'+_id).attr('total');
	            var _obj = _elem;

	            var data = '&id='+_id+'&total='+_total;
	            $.ajax({
	                    url: 'https://www.ceim.es/ajax/actuallies/desmarcar_favorito',
	                    type: 'POST',
	                    dataType: 'json',
	                    data: data,
	                })
	                .done(function(result) {
	                  //_obj.attr('data-valor', result);
	                  _puntos--;
	                  $('#total_'+_id).attr('total', _puntos);
	                  $('#total_'+_id).html('('+_puntos+')');
	                  $(_elem).removeClass('activo');
	                  $(_elem).addClass('js-marcar-favorito');
	                  $(_elem).removeClass('js-desmarcar-favorito');
	                  $(_elem).unbind('click');
	                  $(_elem).bind('click', function(){ marcarFavorito($(this));});
	                })
	                .fail(function(result) {
	                });
	        }
        });
    </script>
