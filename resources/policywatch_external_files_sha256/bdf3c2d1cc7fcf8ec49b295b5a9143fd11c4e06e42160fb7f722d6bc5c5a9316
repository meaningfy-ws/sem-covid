    jQuery(document).ready(function() {
    
        jQuery("#clear").click(function() {
            jQuery("#liikevaihto_vrt").val("");
            jQuery("#liikevaihto_tk").val("");
            jQuery("#kulut").val("");
            jQuery("#vakuutuskorvaukset").val("");
            jQuery(".estimate-container").hide();
            jQuery(".success-1").hide();
            jQuery(".success-2").hide();
        });
    
    
        jQuery("#calculate").click(function() {
            jQuery(".estimate-container").hide();
            jQuery(".success-1").hide();
            jQuery(".success-2").hide();
            
            let liikevaihto_vrt = jQuery("#liikevaihto_vrt").val();
            let liikevaihto_tk = jQuery("#liikevaihto_tk").val();
            let kulut = jQuery("#kulut").val();
            let vakuutuskorvaukset = jQuery("#vakuutuskorvaukset").val();
    
            if (liikevaihto_tk < 0) {
                liikevaihto_tk = 0;
            } 
    
            let tuki = ((((liikevaihto_vrt - liikevaihto_tk) / liikevaihto_vrt) - 0.3) * kulut) - vakuutuskorvaukset;
            tuki = Math.round(tuki);
    
            if (tuki > 500000) {
                tuki = 500000;
            }
    
            if (liikevaihto_vrt <= 0) {
                tuki = 0;
            }
    
            if (tuki>0 && tuki < 2000) {
                jQuery(".estimate-container").show();
                jQuery(".success-1").show();
                jQuery("#estimate").html("Estimated amount of support: "+tuki+"€");
            } else if (tuki > 1999) {
                jQuery(".estimate-container").show();
                jQuery(".success-2").show();
                jQuery("#estimate").html("Estimated amount of support: "+tuki+"€")
            } else {
                jQuery(".estimate-container").show();
                jQuery("#estimate").html("Estimated amount of support: 0€")
                jQuery(".success-1").show();
            }
        
            console.log(tuki);
    
        });
    });
