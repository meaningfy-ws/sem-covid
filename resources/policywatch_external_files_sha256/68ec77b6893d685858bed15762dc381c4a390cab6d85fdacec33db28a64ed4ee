    <script>
        (function () {
            // THINK THIS SCRIPT CAN BE REMOVED IF WE KNOW WHAT WILL BE IN FOOTER ;)
            "use strict";

            var body = document.querySelector("div.wrapper");
            var push = document.querySelector("div.push");
            var footer = document.querySelector(".wk-footer");

            window.addEventListener(
                // Throttle logic: http://jsfiddle.net/jonathansampson/7b0neb6p/
                "resize", throttle(adjustContainerPadding(), 500)
            );
            function throttle(method, waitTime) {
                var working = false;
                return function () {
                    if (working) return;
                    working = true;
                    setTimeout(function () {
                        method(); working = false;
                    }, waitTime);
                };
            }

            function adjustContainerPadding() {
                push.style.height = window.getComputedStyle(footer).height;
                body.style.marginBottom = "-" + window.getComputedStyle(footer).height;
                return adjustContainerPadding;
            }

            adjustContainerPadding();

        }());
    </script>
    <script>
 
        var SiteSpecific = (function() {
            var siteUrl = "";
            function returnWebRoot() {
                var result = siteUrl;
                if (!siteUrl) 
                {
                    result = "";
                }
                return result;
            }
            return {
                getWebRoot: function() {
                    return returnWebRoot();
                }
            }
        })();
    </script>
