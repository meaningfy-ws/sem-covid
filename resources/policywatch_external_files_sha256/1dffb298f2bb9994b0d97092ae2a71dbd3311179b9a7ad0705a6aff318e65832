<article id="post-5299" itemscope itemtype="http://schema.org/NewsArticle">

			<meta itemscope itemprop="mainEntityOfPage" itemType="https://schema.org/WebPage" itemid="https://google.com/article">
        <meta itemprop="datePublished" content="2020-04-08T18:36:47">
        <meta itemprop="dateModified" content="2020-06-03T11:06:42">
