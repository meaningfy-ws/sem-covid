}
});


function removeDuplicates() {
var seen = {};

jQuery(".related-content-item-artikel .card2-item .card-title").each(function() {
var txt = $(this).text();
if (seen[txt])
$(this).parents(".card2-item").remove();
else
seen[txt] = true;
});

}

