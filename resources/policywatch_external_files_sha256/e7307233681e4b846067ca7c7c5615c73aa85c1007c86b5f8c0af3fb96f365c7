function emCommentCaptchaReload(_objImage)
{
objImg = jQuery("#em_comment_captcha_img");
if (objImg.length) {
var objDate = new Date();
objImg.attr("src", "/_em_cms/globals/fn_visual_captcha.php?em_dir=/nachrichten/politik/oesterreich&sid=&nocache=" + objDate.getTime());
}
}

function emCommentValidate()
{
var strMessage = "";


if (jQuery("#em_comment_form input[name='em_comment_email']").length
&&  (!jQuery("#em_comment_form input[name='em_comment_email']").val().length
|| !jQuery("#em_comment_form input[name='em_comment_email']").val().match(/[^@]+@[^@]+\.\w{2,}/)
|| jQuery("#em_comment_form input[name='em_comment_email']").val() == "Ihre E-Mail-Adresse"
)
) {
strMessage += "Bitte geben Sie Ihre E-Mail-Adresse an.<br />";
}

if (jQuery("#em_comment_form input[name='em_comment_username']").length
&&  (jQuery("#em_comment_form input[name='em_comment_username']").val().length < 2
|| jQuery("#em_comment_form input[name='em_comment_username']").val() == "Ihr Name"
|| jQuery("#em_comment_form input[name='em_comment_username']").val() == "Ihr Nickname"
)
) {
if (jQuery("#em_comment_form input[name='em_comment_username']").val() == "Ihr Name") {
strMessage += "Bitte geben Sie Ihren Namen an.<br />";
} else {
strMessage += "Bitte geben Sie Ihren Nicknamen an.<br />";
}
}
if (jQuery("#em_comment_form input[name='my_user']").length
&&  (jQuery("#em_comment_form input[name='my_user']").val().length < 2
)
) {
strMessage += "Bitte geben Sie Ihren Nutzernamen oder E-Mail-Adresse an.<br />";
}
if (jQuery("#em_comment_form input[name='my_pass']").length
&&  (jQuery("#em_comment_form input[name='my_pass']").val().length < 2
)
) {
strMessage += "Bitte geben Sie Ihr Passwort ein.<br>";
}
if (!jQuery("#em_comment_form textarea[name='em_comment_text']").val().length
||  jQuery("#em_comment_form textarea[name='em_comment_text']").val().match(/(Geben Sie hier Ihren Kommentar ein...)/)
) {
strMessage += "Bitte geben Sie einen Kommentar ein.<br />";
}
strMessage += emCommentTextLimit(jQuery("#em_comment_form textarea[name='em_comment_text']"), 1000);
if (strMessage.length) {
emCommentError(strMessage);
} else {
jQuery("#em_comment_form").submit();
}

return false;
}

function emCommentError(_strMessage)
{
jQuery("#em_comment_error").remove();

if (typeof(_strMessage) !== "undefined"
&&  _strMessage.length
) {
strMessage = "<div id=\"em_comment_error\" class=\"alert alert-danger col-12 text-center margin-top-10\" style=\"display:none;\">" + _strMessage + "<\/div>";

jQuery(".em_comment_write").after(strMessage);
}
}


function emCommentTextLimit(_objElement, _intMaxlen)
{
var strReturn = "";

var objElement = jQuery(_objElement);
if (objElement.length
&&  _intMaxlen != 0
) {
var intFieldLength = objElement.val().length;
if (intFieldLength > _intMaxlen) {
strReturn = "Ihr Kommentar ist zu lang. Es sind maximal " + _intMaxlen + " Zeichen möglich.";
emCommentError(strReturn);
objElement.val(objElement.val().substring(0, _intMaxlen));
} else {
jQuery("#em_comment_error").remove();
}
}
return strReturn;
}

