<div id="comments">
    <h2>COMMENTS (10)    </h2>
            <script type="text/javascript">

            function trackCommentsLoad()
            {
                ga('send', 'event', 'Comments', 'load', window.location.href);
            }

            function watchForCommentsInViewport()
            {
                document.addEventListener("scroll", trackViewWhenCommentsAreVisible);
            }

            function stopWatchingForCommentsInViewport()
            {
                document.removeEventListener("scroll", trackViewWhenCommentsAreVisible);
            }

            function trackViewWhenCommentsAreVisible()
            {
                if (!isFirstCommentVisible()) {
                    return;
                }

                trackViewsEveryTenSeconds();

                stopWatchingForCommentsInViewport();
            }
            
            function isFirstCommentVisible()
            {
                var comments = document.getElementsByClassName("comment");
                if (comments.length === 0) {
                    return false;
                }

                var firstComment = comments[0];
                var distanceToContent = 80;
                return (firstComment.getBoundingClientRect().top + distanceToContent) <= window.innerHeight;
            }

            var viewTimeInSeconds = 0;

            function trackViewsEveryTenSeconds()
            {
                var minuteInSeconds = 60;

                if (viewTimeInSeconds >= minuteInSeconds) {
                    trackViewsEveryMinute();
                    return;
                }

                trackView(viewTimeInSeconds);
                
                viewTimeInSeconds += 10;

                var tenSecondsInMilliseconds = 10000;

                setTimeout(trackViewsEveryTenSeconds, tenSecondsInMilliseconds);
            }

            function trackViewsEveryMinute()
            {
                var tenMinutesInSeconds = 600;

                if (viewTimeInSeconds > tenMinutesInSeconds) {
                    return;
                }

                trackView(viewTimeInSeconds);

                viewTimeInSeconds += 60;

                var oneMinuteInMilliseconds = 60000;

                setTimeout(trackViewsEveryMinute, oneMinuteInMilliseconds);
            }

            function trackView(viewTimeInSeconds)
            {
                ga('send', 'event', 'Comments', 'view: '+viewTimeInSeconds);
            }

            trackCommentsLoad();
            watchForCommentsInViewport();

        </script>

