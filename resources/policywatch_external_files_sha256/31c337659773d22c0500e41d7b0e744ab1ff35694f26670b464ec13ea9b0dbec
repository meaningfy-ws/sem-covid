<script type="text/javascript">

(function(){

    var hasSentPageView = false;

    function consentYes()
    {
        window['ga-disable-UA-17456403-37'] = false;
        console.log("User Consent: Google Analytics enabled");
        if (hasSentPageView) {
            return;
        }
        ga('send', 'pageview');
        hasSentPageView = true;
    }

    function consentNo()
    {
        window['ga-disable-UA-17456403-37'] = true;
        console.log("User Consent: Google Analytics disabled");
    }

    function boot()
    {
        ga('create', 'UA-17456403-37', 'auto');

        var consent = CookieConsentRepository.fetch();
        if (consent.performance) {
            consentYes();
        } else {
            consentNo();
        }

        CookieConsentListener.onPerformanceConsentChange(function(hasPerformanceConsent) {
            if (hasPerformanceConsent) {
                consentYes();
                return;
            }
            consentNo();
        });
    }

    boot();
}());

</script>
