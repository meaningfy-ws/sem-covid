<script src="https://www.google.com/recaptcha/api.js?render=6Ld98JMUAAAAAF6DjlPm41KYse7-dqG_h_Is5Vaq"></script>

<script>

$(document).ready(function () {

    $("#CB_1").click(function(){
        if ($(this).is(':checked')) {
            $("#hidden_CB_1").prop( "disabled", true );
        } else {
            $("#hidden_CB_1").prop( "disabled", false );
        }
    });

    $("#CB_2").click(function(){
        if ($(this).is(':checked')) {
            $("#hidden_CB_2").prop( "disabled", true );
        } else {
            $("#hidden_CB_2").prop( "disabled", false );
        }
    });

    $("#CB_3").click(function(){
        if ($(this).is(':checked')) {
            $("#hidden_CB_3").prop( "disabled", true );
        } else {
            $("#hidden_CB_3").prop( "disabled", false );
        }
    });

    $('#feliratkozomFormSubBtn').click(function() {
      checked = $("input[type=checkbox].requiredCheckBox:checked").length;

      if(!checked) {
        $("#kotelezoHirlevel").modal('show');
        return false;
      }

    });

});

