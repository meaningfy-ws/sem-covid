}*/


//    $(document).ready(function()
//    {
        grecaptcha.ready(function()
        {
            grecaptcha.execute('6Ld98JMUAAAAAF6DjlPm41KYse7-dqG_h_Is5Vaq', {action: 'newsletter'}).
            then(function(gtoken)
            {
                $('#form4492').validator().on('submit', function (e)
                {
                    if (!e.isDefaultPrevented())
                    {
                        $("#feliratkozomFormSubBtn").attr("disabled", true);
                        e.preventDefault();
                        $.ajax(
                        {
                            url:'wp-admin/admin-ajax.php',//'https://s1364398973.t.eloqua.com/e/f2',
                            type:'post',
                            data:
                            {
                                action : 'google_recaptcha_v3',
                                formdata:$('#form4492').serialize(),
                                token: gtoken
                            },
                            success:function(resp)
                            {
                                //console.log(resp);
                                $('#eloqua-form').modal('hide');
                                $("#form4492").trigger('reset');
                                $("#feliratkozomFormSubBtn").attr("disabled", false);
                                $("#form4492").validator('update');
                                if(resp.success=="true")
                                {
                                    $('#feedbackModal').modal('show');
                                }
                                else
                                {
                                    $('#captchaSpamErrorModal').modal('show');
                                }
                            }
                        });
                    }
                });
            })
        })
//    });
</script>
