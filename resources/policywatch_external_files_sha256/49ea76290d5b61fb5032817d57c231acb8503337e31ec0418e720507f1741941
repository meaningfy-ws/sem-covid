<script>

function execute_readmore()
{
	jQuery('.buttons_readmore').css('display', 'none');
	
	
	//auto animate height on auto...
	var cur_height = jQuery('.overflow_hidden_box').height();
	jQuery('.overflow_hidden_box').css('opacity', 0.0);
	jQuery('.overflow_hidden_box').css('height', 'auto');
	var auto_height = jQuery('.overflow_hidden_box').height();
	jQuery('.overflow_hidden_box').height( cur_height ).animate({height: auto_height, opacity: 1.0}, 500, function() {
		// Animation complete.
		jQuery('.overflow_hidden_box').css('overflow', 'visible');
	});
}

jQuery(document).ready(function($) {
	
	//controllo per i pulsanti readmore
	$('.overflow_hidden_box').each(function( index ) {
		
		var cur_height = $(this).height();
		$(this).css('opacity', 0.0);
		$(this).css('height', 'auto');
		var auto_height = $(this).height();
		$(this).css('height', cur_height);
		$(this).css('opacity', 1.0);
		
		if( (auto_height+30) <= cur_height ) $('.buttons_readmore').css('display', 'none');
		
	});
	
	
    $('form.visual-form-builder .form-select-sedi').load('?get_sedi_select=1');

	$('.footer_carousel').slick({
		dots: true,
		infinite: true,
		speed: 300,
		slidesToShow: 3,
		slidesToScroll: 3,
	});
	
	$('body').on('click', '.wdpu-close', function() {
		alert('1');
		//$('.wdpu-hide-forever').trigger('click');
	});

});

</script>

