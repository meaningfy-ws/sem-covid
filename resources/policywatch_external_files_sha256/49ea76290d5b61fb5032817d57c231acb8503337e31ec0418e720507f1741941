<script>

jQuery(document).ready(function($) {
    
	//sposta link "Documenti" alla fine..
	$('.sottoMenuCat').each(function(index, element) {
        $('li', this).each(function(index, element) {
			if( $('a:first-child',this).html().toLowerCase() == 'documenti') {
				$(this).parent().append($(this));
				return false;
			}
		});
    });
	
	$('.filaEsterna li a').wrapInner( "<span></span>");
	
	//mostra sottocartelle on click
	$('.filaEsterna li a').click(function(e) {
		e.preventDefault();
		//prima andiamo a trovar l'id della categorie sulla quale abbiamo cliccato
		//wp non ci da un id purtroppo..quindi ce lo estrapoliamo dal nome della classe
		classes = $(this).parent().attr("class").split(" ");
		id = -1;
		for( i=0; i<classes.length; i++) {
			 if( classes[i].indexOf('cat-item-') != -1 ) {
				id = classes[i].replace("cat-item-", ""); 
				break;
			 }
		}
		//trovato l'id si procede... al primo click mostro sottomenu.. al secondo apro categoria madre
		if( id != -1 ) {
			//url alternativo
			if( $(this).attr('data-href') ) {
				location.href = $(this).attr('data-href');				
			}
			//load cat madre
			else if( $('#child-of-'+id).hasClass('active') ) {
				am_load_content( $(this).attr('href') );				
			} 
			//apri sottomenu
			else {
				$('.sottoMenuCat').removeClass('active');
				$('#child-of-'+id).addClass('active');
				return false;
			}
		}
		
    });
	
	$('body').on('click', '.sottoMenuCat a, .pagination a', function(e) {
		e.preventDefault();
		if( $(this).attr('data-href') ) {
			location.href = $(this).attr('data-href');				
		} else {
			
			//salvo la url scelta nella session
			$.get( "http://www.cgil.it/set-pannel-category", { pannel_category: $(this).attr('href') } );
			
			am_load_content( $(this).attr('href') );
		}
    });
    
    
    
    //check controllo apertura menu categorie
    
    $('.sottoMenuCat').each(function( index ) {
		
		if( $( this ).children('#last_category_choice_point').length > 0 ) $(this).addClass('active');
		
	});
    
    

});

function am_load_content(url) {
	show_loader();
	jQuery('#content').load( url +' #inner-content', function() {
		jQuery("#content").animatedScroll();
		hide_loader();
	});
}

function show_loader() {
	jQuery('#loading-icon').show();
}
function hide_loader() {
	jQuery('#loading-icon').hide();
}

</script>
  </div>
</div>

