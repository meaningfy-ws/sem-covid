<script>
	function getCurrentWidth(){
		if(window.outerWidth < window.innerWidth){
			return window.outerWidth;
		}else{
			return window.innerWidth;
		}
	}

	function getCurrentHeight(){
		if(window.outerHeight < window.innerHeight){
			return window.outerHeight;
		}else{
			return window.innerHeight;
		}
	}

	function setContainerMaxWidth(){
		var outerContainer = $('.tableOuterContainer, .imageOuterContainer'); 
		if(outerContainer != undefined && outerContainer.length > 0){
			outerContainer.css('max-width', $('body').width() - 60);
		}
	}
	
	$(function() {
	   $(".buttonFullScreenTable , .buttonFullScreenImage").on("click", function(e){ 
		   e.preventDefault();
		   
		   var outerContainer;
		   if($(e.target).is('i')){
			   outerContainer = $(e.target).parent().parent().parent();   
		   }else{
			   outerContainer = $(e.target).parent().parent();   
		   }
		    
		   var content = $(".tableContent, .imageContent", outerContainer).clone();	
		   var scrollState = $('html').css('overflow');
		   var posX = 0; 
		   var posY = 0; 
		   var resizeHandler = function() {
			   content.dialog( "option", "position", { my: "center", at: "center", of: window } );
			   content.dialog( "option", "width", getCurrentWidth() - (getCurrentWidth() * 0.1) );
			   content.dialog( "option", "height", getCurrentHeight() - (getCurrentHeight() * 0.1) );
			   setContainerMaxWidth();
		   };
		   
		   content.dialog({
			  width: getCurrentWidth() - (getCurrentWidth() * 0.1),
			  height: getCurrentHeight() - (getCurrentHeight() * 0.1),
			  position: { my: "center", at: "center", of: window },
			  draggable: false,
			  resizable: false,
			  modal: true,
			  open: function(event, ui) { 
				  		 $(window).bind("resize",resizeHandler);  
				  		 posY = window.pageYOffset;
				  		 posX = window.pageXOffset;
				  		 var xOffset = -1 * posX;
				  		 var yOffset = -1 * posY;           
				  		 $('html').css({'position' : 'fixed', 'width' : '100%', 'left' : xOffset + 'px', 'top' : yOffset + 'px'});
				  		 content.dialog( "option", "position", { my: "center", at: "center", of: window } );
				     },
			  beforeClose: function(event, ui) { 
				  		 $('html').css({'position' : '', 'width' : '', 'top' : ''});
				  		 $(window).scrollLeft(posX);
				  		 $(window).scrollTop(posY);
				     },  
			  close: function(event, ui) { 
				  		 $(window).unbind("resize",resizeHandler); 
					  	 content.dialog( "destroy" ); 
					 }
			});
		   content.show();
		});
	 });

	$(document).ready(function(){
		setContainerMaxWidth();
	});

	$(window).bind("resize",setContainerMaxWidth);  
</script>

