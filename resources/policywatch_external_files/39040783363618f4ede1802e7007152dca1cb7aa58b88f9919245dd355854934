      <script>
(function ($, Drupal) {
    "use strict";
function setCookie(cname,cvalue,exdays) {
  var d = new Date();
  d.setTime(d.getTime() + (exdays*24*60*60*1000));
  var expires = "expires=" + d.toGMTString();
  document.cookie = cname + "=" + cvalue + ";" + expires + ";path=/";
}

function getCookie(cname) {
  var name = cname + "=";
  var decodedCookie = decodeURIComponent(document.cookie);
  var ca = decodedCookie.split(';');
  for(var i = 0; i < ca.length; i++) {
    var c = ca[i];
    while (c.charAt(0) == ' ') {
      c = c.substring(1);
    }
    if (c.indexOf(name) == 0) {
      return c.substring(name.length, c.length);
    }
  }
  return "";
}

    var $body = $('body');   
 var lang = $('html').attr('lang'); 
var languages = {
fr : {'more': 'Plus d\'informations', 'text': 'Nous utilisons des cookies sur ce site pour améliorer votre expérience utilisateur.', 'accept': 'x Continuer'},
nl : {'more': 'Meer weten', 'text': 'Onze website gebruikt cookies om de site gebruiksvriendelijker te maken', 'accept': 'x Doorgaan'},
de : {'more': 'Weitere Informationen', 'text': 'Das Site verwendet Cookies, um die Website benutzerfreundlicher zu gestalten. ', 'accept': 'x Weiter'},
en : {'more': 'More informations', 'text': 'We use cookies on this site to improve your user experience.', 'accept': 'x Continue'},
};

    var cookieText = '<div id="euCookie"><div class="container"><p>'+ languages[lang].text +'</p><ul class="list-inline"><li class="list-inline-item"><a href="/'+ lang +Drupal.t("/cookies")+'" class="btn btn-primary">'+ languages[lang].more +' </a></li><li class="list-inline-item"><a href="#" id="closeCookie" class="btn btn-primary">'+  languages[lang].accept +'</a></li></ul></div></div>';
$('body').prepend(cookieText);

    var cookieBox = $("#euCookie");

    if (getCookie("cookieAlert")) {
        cookieBox.hide();
    } else {
        $("#closeCookie").bind("click", function(e) {
            e.preventDefault();
	setCookie("cookieAlert","true", {expires: new Date(2030, 10, 29, 11, 10, 10)});
            $(cookieBox).slideUp();
        });
    }

})(window.jQuery, Drupal);

</script>
