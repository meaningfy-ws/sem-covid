        const isNumber = function (evt) {
        evt = (evt) ? evt : window.event;
        const charCode = (evt.which) ? evt.which : evt.keyCode;
        return charCode > 31 && (charCode < 48 || charCode > 57) ? false : true;
    };

    (function () {
        const getQueryStringValue = function (key) {
            const params = {};

            document.location.search.substring(1).split('&').forEach(function (param) {
                const pair = param.split('=');
                params[pair[0]] = pair[1];
            });

            if (!params[key]) {
                return false;
            }

            return params[key];
        };

                if (isUpgrades === true && getQueryStringValue('source') === 'mc') {
            flipPayConfig = Object.assign(flipPayConfig, {
                            premium_content_redirect_url: 'https://member.independent.ie/',
                        });
        }

        let returnURL = getQueryStringValue('returnURL');
        if (returnURL) {
            flipPayConfig = Object.assign(flipPayConfig, {
                            premium_content_redirect_url: decodeURIComponent(returnURL),
                        });
        }

        const subscriberCookieName = 'subscriber';
        let bodyAvailable = false;
        let bundles = [];
        let selectedPrice = {};
        let previouslySelectedPriceId = getPriceSelected(localStorage.getItem('price.selected')) || getQueryStringValue('priceId');
        let listeningForGigyaEvents = false;
        let addToCartFiredAfterRegistration = false;
        let userHasLoggedIn = false;
        let productImpressionRecorded = {};
        let productClickSource = localStorage.getItem('product_click_source');
        let homeDeliveryButtonCheck = false;
        let addressCovered = false;

        const userHasValidSubscriberCookie = function () {
            return !! JSON.parse(getCookie(subscriberCookieName) || '{}').subscriptionStatus;
        }

        const getBundleById = function (id) {
            return bundles.filter(function (bundle) {
                return bundle._id === id;
            })[0];
        };

        const getSubscriptionStatus = function (purchase) {
            const grantedBy = Object.keys(purchase).filter(function (key) {
                return key.indexOf('granted_by_') > -1;
            }).map(function (key) {
                return key.split('granted_by_')[1];
            });

            const isGrantedBy = function (grant) {
                return grantedBy.indexOf(grant) > -1
            }

            if (isGrantedBy('purchase')) {
                return {
                    subscriptionStatus: purchase.granted_by_purchase.sku_code,
                    userID: purchase.granted_by_purchase.user_id,
                    subscriptionStartDate: purchase.granted_by_purchase.original_start_at,
                    subscriptionFinishDate: purchase.granted_by_purchase.finish_at,
                };
            }

            if (isGrantedBy('app_purchase')) {
                return {
                    subscriptionStatus: purchase.granted_by_app_purchase.sku_code,
                    userID: purchase.granted_by_app_purchase.user_id,
                    subscriptionStartDate: purchase.granted_by_app_purchase.original_start_at,
                    subscriptionFinishDate: purchase.granted_by_app_purchase.finish_at,
                };
            }

            if (isGrantedBy('whitelist_rule')) {
                return {
                    subscriptionStatus: 'Whitelist',
                    userID: purchase.granted_by_whitelist_rule.user_id,
                    subscriptionStartDate: '0000-00-00T00:00:00Z',
                    subscriptionFinishDate: '0000-00-00T00:00:00Z',
                };
            }

            if (isGrantedBy('corporate_account')) {
                return {
                    subscriptionStatus: 'Corporate',
                    userID: purchase.granted_by_corporate_account.user_id,
                    subscriptionStartDate: '1111-11-11T11:11:11Z',
                    subscriptionFinishDate: '1111-11-11T11:11:11Z',
                };
            }

            return {
                subscriptionStatus: '',
                userID: '',
                subscriptionStartDate: '',
                subscriptionFinishDate: '',
            };
        };

        const listenForTabClick = function (tabPrefix) {
            document.getElementById(tabPrefix + '-tabs').querySelectorAll('a[toggle]').forEach(function (tab) {
                tab.onclick = function () {
                    const badgeMap = {};
                    badgeMap[tabPrefix + '-monthly-prices-tab-trigger'] = 'monthly';
                    badgeMap[tabPrefix + '-annual-prices-tab-trigger'] = 'annual';

                    const badgeToFilterBy = badgeMap[tab.id];

                    if (! badgeToFilterBy) {
                        return;
                    }

                    flipPayConfig = Object.assign(flipPayConfig, {
                        filter_prices_by_badge: badgeToFilterBy,
                    });

                    window.location.hash = '#' + badgeToFilterBy;

                    window.dataLayer.push({
                        event: '_trackEvent',
                        eventCategory: 'content_link',
                        eventAction: badgeToFilterBy,
                        eventLabel: 'shopfront_subscribe'
                    });

                    const eventName = {
                        'shop-front': 'fp_refresh_price',
                        'home-delivery': 'fp_refresh_price_only',
                    }[tabPrefix];

                    document.body.dispatchEvent(new CustomEvent(eventName));
                };
            });
        }

        const setActiveTab = function (tabPrefix) {
            document.getElementById(tabPrefix + '-tabs').querySelectorAll('a[toggle]').forEach(function (tab) {
                tab.parentNode.classList.remove('is-active');
            });

            const selectTab = {
                monthly: tabPrefix + '-monthly-prices-tab-trigger',
                annual: tabPrefix + '-annual-prices-tab-trigger'
            };

            const selectedTabId = selectTab[flipPayConfig.filter_prices_by_badge];

            document.getElementById(selectedTabId).parentNode.classList.add('is-active');
        };

                const showOrderSummary = function (node, priceId) {
            if ((!priceId || document.cookie.indexOf('guid') === -1) && !isHomeDelivery && homeDeliveryButtonCheck) {
                return;
            }

            const subscribeButton = node.querySelector('[data-price_id="'+priceId+'"]');

            if (subscribeButton) {
                                homeDeliveryButtonCheck = true;
                subscribeButton.click();
            }
        };
        
        const parseTweetIdFromUrl = function (url) {
            const pathParts = new URL(url).pathname.split('/');
            return pathParts[pathParts.length - 1];
        };

        const couponCodeUsed = function (purchase) {
            return Object.keys(purchase).indexOf('coupon_code') > -1;
        }

        const getListName = function () {
            if (isShopFront || isUpgrades) {
                return 'shopfront';
            }

            return 'article_' + dataLayer[0].category.primaryCategory;
        };

        const getEcommerceEventCategory = function () {
                        if (isUpgrades) {
                return 'upgrade_flow';
            }

            if (isShopFront) {
                return 'hd_flow';
            }
        };

        const fireProductClickEvent = function (fn) {
            window.dataLayer.push({
                event: 'ee-productClick',
                productClickSource: productClickSource,
                ecommerce: {
                    click: {
                        actionField: {
                            list: getListName()
                        },
                        products: [selectedPrice]
                    }
                },
                eventTimeout: 2000,
                eventCallback: function () {
                    if (fn) {
                        fn();
                    }
                }
            });
        }

        const listenForFlipPayEvents = function () {
            document.body.addEventListener('fp_user_event', function (event) {
                const eventType = event.detail.event_type;

                                if (eventType === 'access_resolved ') {

                    bundles = event.detail.object.prices.map(function (price, index) {
                        const badges = price['badge'] || {};
                        const priceId = badges['home-delivery'] ? 'PHD' : price.sku_code;
                        return {
                            _id: price.id,
                            id: priceId,
                            name: price.name,
                            price: price.gross_amount,
                            brand: 'INM',
                            category: price.id,
                            position: index,
                            list: getListName(),
                            coupon_applied: price.coupon_applied,
                            delivery_days: price.delivery_days || [],
                            badges: badges
                        };
                    });

                                        bundles = bundles.sort(function (priceA, priceB) {
                        if (priceA.badges['premium'] && priceB.badges['premium-plus']) {
                            return -1;
                        }

                        if (priceA.badges['premium-plus'] && priceB.badges['premium']) {
                            return 1;
                        }

                        if (priceA.badges['premium'] && priceB.badges['home-delivery']) {
                            return -1;
                        }

                        if (priceA.badges['premium-plus'] && priceB.badges['home-delivery']) {
                            return -1;
                        }

                        if (priceA.badges['home-delivery'] && priceB.badges['premium']) {
                            return 1;
                        }

                        if (priceA.badges['home-delivery'] && priceB.badges['premium-plus']) {
                            return 1;
                        }

                        return 0;
                    });

                                        if (event.detail.object.access === true) {
                        const cookieData = updateSubscriberCookie(event.detail.object);
                        if (userHasLoggedIn === true) {
                            const virtualPageViewData = {
                                label: 'login',
                                eventData: {
                                    user: {
                                        gigyaID: getCookie('guid'),
                                        subscriptionStatus: cookieData.subscriptionStatus,
                                        subscriptionStartDate: cookieData.subscriptionStartDate,
                                        subscriptionFinishDate: cookieData.subscriptionFinishDate,
                                        userID: cookieData.userID,
                                    }
                                }
                            };

                            if (Object.keys(window.dataLayer[0]).indexOf('article') > -1) {
                                virtualPageViewData.eventData.article = {
                                    wallType: window.dataLayer[0].article.wallType,
                                    // Since the user is a subscriber, the wall is no longer visible.
                                    wallVisible: 'false'
                                }
                            }

                            window.inmTracking.trackEventAsVirtualPageView(virtualPageViewData);
                        }

                        window.showSubscriberElements();
                    }
                                        else {
                                                if (!productImpressionRecorded[flipPayConfig.filter_prices_by_badge] && !previouslySelectedPriceId) {
                            window.dataLayer.push({
                                event: 'ee-productImpression',
                                ecommerce: {
                                    impressions: bundles,
                                }
                            });

                            productImpressionRecorded[flipPayConfig.filter_prices_by_badge] = true;
                        }

                        listenForGigyaEvents();

                                                document.cookie = subscriberCookieName + "= ; expires = Thu, 01 Jan 1970 00:00:00 GMT";
                        if (userHasLoggedIn === true) {
                            const virtualPageViewData = {
                                label: 'login',
                                eventData: {
                                    user: {
                                        gigyaID: getCookie('guid'),
                                        subscriptionStatus: '',
                                        subscriptionStartDate: '',
                                        subscriptionFinishDate: '',
                                        userID: '',
                                    }
                                }
                            };

                            if (Object.keys(window.dataLayer[0]).indexOf('article') > -1) {
                                virtualPageViewData.eventData.article = {
                                    wallType: window.dataLayer[0].article.wallType,
                                    // Since the user is not a subscriber, the wall is now visible.
                                    wallVisible: 'true'
                                }
                            }

                            window.inmTracking.trackEventAsVirtualPageView(virtualPageViewData);
                        }
                    }

                    localStorage.setItem('subscriptionwall.latest-load', new Date().getTime());

                                        const hash = getUrlHash();
                    if (isShopFront && hash) {
                        const faq = document.querySelector('[data-faq="' + hash + '"]')

                        if (faq) {
                            setTimeout(function () {
                                faq.click()
                                window.scrollTo(0, faq.offsetTop - 15);
                            }, 500)
                        }
                    }
                }

                if (eventType === 'price_selected') {
                    selectedPrice = getBundleById(event.detail.object.id);

                    if (isShopFront) {
                                                const tabs = document.getElementById('shop-front-tabs');

                        if (tabs) {
                                                        const activeTabId = tabs.querySelector('li.is-active a').id;

                            if (activeTabId === 'shop-front-monthly-prices-tab-trigger') {
                                productClickSource = window.shopFrontHeaderSubscribe ? 'shopfront_monthly_header_subscribe' : 'shopfront_monthly_subscribe';
                            }

                            if (activeTabId === 'shop-front-annual-prices-tab-trigger') {
                                productClickSource = window.shopFrontHeaderSubscribe ? 'shopfront_annual_header_subscribe' : 'shopfront_annual_subscribe';
                            }
                        } else {
                            productClickSource = window.shopFrontHeaderSubscribe ? 'shopfront_header_subscribe' : 'shopfront_subscribe';
                        }

                        localStorage.setItem('product_click_source',  productClickSource);
                    } else {
                        window.shopFrontHeaderSubscribe = false;
                        productClickSource = undefined;
                        localStorage.removeItem('product_click_source');
                    }

                    if (! previouslySelectedPriceId) {
                        fireProductClickEvent(null);
                    }

                                        if (Object.keys(event.detail.object.badge || {}).indexOf('home-delivery') > -1) {
                        window.dataLayer.push({
                            event: '_trackEvent',
                            eventCategory: getEcommerceEventCategory(),
                            eventAction: 'hd-address',
                            eventLabel: 'load'
                        });
                    }
                }

                if (eventType === 'summary_displayed') {
                                        const priceIdFromUrl = getQueryStringValue('priceId')
                    if (priceIdFromUrl) {
                        selectedPrice = getBundleById(priceIdFromUrl);
                    }

                    setTimeout(function () {
                        const flipPayEl = document.getElementById('flip-pay');

                        if (isShopFront){
                            window.scrollTo(0, flipPayEl.offsetTop - 30);
                        } else {
                            window.scrollTo(0, flipPayEl.offsetTop + (flipPayEl.clientHeight/2));
                        }

                        document.querySelectorAll('input[type="radio"][data-price_id]').forEach(function (price) {
                            price.addEventListener('click', function () {
                                if (document.getElementById('fp-tog-1')) {
                                    document.getElementById('fp-tog-1').click();
                                }
                            });
                        });
                    }, 500);

                    if (! selectedPrice._id) {
                        return;
                    }

                    if (userHasLoggedIn === true) {
                        fireAddToCartEvent();
                    }

                    window.dataLayer.push({
                        event: 'ee-checkout',
                        ecommerce: {
                            checkout: {
                                actionField: {
                                    step: 1
                                },
                                products: [Object.assign(selectedPrice, { quantity: 1 })]
                            }
                        }
                    });
                }

                                if (eventType === 'new_card' && isUpgrades) {
                    window.dataLayer.push({
                        event: '_trackEvent',
                        eventCategory: 'upgrade_flow',
                        eventAction: 'change_cc',
                        eventLabel: 'load'
                    });
                }

                                if (eventType === 'new_card_created' && isUpgrades) {
                    window.dataLayer.push({
                        event: '_trackEvent',
                        eventCategory: 'upgrade_flow',
                        eventAction: 'change_cc',
                        eventLabel: 'save'
                    });
                }

                if (eventType === 'purchased') {
                    localStorage.removeItem('price.selected');
                    localStorage.removeItem('product_click_source');
                    previouslySelectedPriceId = null;
                    productClickSource = null;

                    const purchase = event.detail.object;

                    const snackbar = document.getElementById('fp-snackbar');
                    if (snackbar) {
                                                snackbar.querySelector('.message2-outer').classList.remove('-error');

                                                snackbar.style.opacity = couponCodeUsed(purchase) ? 0 : 1;
                    }

                                        if (! selectedPrice._id && couponCodeUsed(purchase)) {
                        selectedPrice = {
                            _id: purchase.price_id,
                            id: purchase.sku_code,
                            name: purchase.description,
                            price: purchase.amount,
                            brand: 'INM',
                            category: purchase.price_id,
                            position: 0,
                            list: getListName(),
                            coupon_applied: purchase.coupon_applied,
                        }
                    }

                    if (! selectedPrice._id) {
                        return;
                    }

                    window.dataLayer.push({
                        event: 'ee-transaction',
                        ecommerce: {
                            currencyCode: purchase.currency,
                            purchase: {
                                actionField: {
                                    id: purchase.id
                                },
                                products: [Object.assign(selectedPrice, { quantity: 1 })]
                            }
                        },
                                                eventTimeout: 2000,
                                                eventCallback: function () {
                                                        purchase.original_start_at = purchase.start_at;
                            updateSubscriberCookie({
                                granted_by_purchase: purchase
                            });

                                                        if (isShopFront && !disableRedirect && !returnURL) {
                                redirectToShopFrontWelcomePage();
                            } else if (disableRedirect) {
                                window.showSubscriberElements();
                            }
                        },
                    });
                }

                if (eventType === 'content_displayed') {
                    setTimeout(function () {
                                                document.querySelectorAll('[data-social-embed][data-social-network="facebook"],[data-social-embed][data-social-network="twitter"]').forEach(function (socialEmbed) {
                            const socialNetwork = socialEmbed.dataset.socialNetwork;

                            if (socialNetwork === 'facebook') {
                                FB.XFBML.parse(socialEmbed);
                            }

                            if (socialNetwork === 'twitter' || socialNetwork === 'twitterVideo') {
                                                                const unparsedTweet = socialEmbed.querySelector('a');
                                if (unparsedTweet) {
                                    const tweetUrl = unparsedTweet.href;
                                    const tweetId = parseTweetIdFromUrl(tweetUrl);
                                    socialEmbed.innerHTML = '';
                                    twttr.widgets.createTweet(tweetId, socialEmbed);
                                }
                            }
                        });

                                                ['gallery', 'lightbox'].forEach(function (namespace) {
                            document.querySelectorAll('[data-'+namespace+']').forEach(function (el) {
                                el.removeAttribute(namespace+'-initialized');
                            });
                        });

                                                if (document.getElementById("crosswords") !== null && document.getElementById("crosswords").dataset.src !== null) {
                            document.getElementById("crosswords").src = document.getElementById("crosswords").dataset.src;
                        }

                        dispatchEvent(new CustomEvent('reinitialize'));

                    }, 1000);
                }

                if (eventType === 'purchase_failed') {
                    if (document.getElementById('fp-snackbar')) {
                        document.querySelector('#fp-snackbar .message2-outer').classList.add('-error');
                    }
                }

                if (eventType === 'purchasing') {
                                        if (bundles.length === 1 && bundles[0].coupon_applied === true) {
                                                if (addToCartFiredAfterRegistration === false) {
                            selectedPrice = bundles[0];
                            fireAddToCartEvent();
                        }
                    }
                }
            });
        };

        const redirectToShopFrontWelcomePage = function () {
            window.location.href = 'https://subscribe.independent.ie/welcome/';
        };

        const fireAddToCartEvent = function () {
            if (! selectedPrice._id) {
                return;
            }

            window.dataLayer.push({
                event: 'ee-addToCart',
                ecommerce: {
                    add: {
                        products: [Object.assign(selectedPrice, { quantity: 1 })]
                    }
                }
            });
        }

        const updateSubscriberCookie = function (purchase) {
                        const cookieExpiryInSeconds = 60 * 60 * 24 * 30;
            const domain = '.independent.ie';
            const cookieData = getSubscriptionStatus(purchase);
            document.cookie = subscriberCookieName + "=" + JSON.stringify(cookieData) + ';path=/;domain=' + domain + ';max-age='+cookieExpiryInSeconds;

            return cookieData;
        };

        const getBadgesForEl = function (el) {
            const badgeTextEl = el.querySelector('.fp-badge-text');

            if (! badgeTextEl) {
                return [];
            }

            return badgeTextEl.innerHTML.split(',').map(function (text) {
                return text.trim();
            });
        };

        const showPremiumBadge = function (el) {
            const badges = getBadgesForEl(el);
            badges.forEach(badge => {
                const badgeElement = el.querySelector(`[data-badge="${badge}"]`);
                if (badgeElement) {
                    badgeElement.style.display = 'block';
                }
            });
        };

        const addShopFrontClasses = function (el) {
            const badges = getBadgesForEl(el);

            // If the user is on the shop front page and there are exactly 3 bundles, show them all in a single row.
            const bundleContainer = document.querySelector('.n-plans1');
            bundleContainer.classList.toggle('-three', bundleContainer.children.length === 3);

            if (badges.indexOf('featured') > -1) {
                el.classList.add('-featured');
            }
        };

        const updateTemplateForHomeDelivery = function (el) {
            const badges = getBadgesForEl(el);

                        if (badges.indexOf('home-delivery') > -1 && !isHomeDelivery) {
                const subscribeLink = el.querySelector('a[data-price_id]');

                                subscribeLink.addEventListener('click', function (e) {
                    e.preventDefault();
                    selectedPrice = getBundleById(subscribeLink.dataset['price_id']);
                    fireProductClickEvent(function () {
                        window.location.href = subscribeLink.href;
                    });
                });

                el.querySelector('button[data-price_id]').style.display = 'none';
                el.querySelector('a[data-price_id]').style.display = 'inline-flex';

                                if (window.location.href.indexOf("#annual") > -1) {
                    el.querySelector('a[data-price_id]').href = el.querySelector('a[data-price_id]').href + '#annual';
                } else if (window.location.href.indexOf("#monthly") > -1) {
                    el.querySelector('a[data-price_id]').href = el.querySelector('a[data-price_id]').href + '#monthly';
                }

                subscribeLink.style.display = 'inline-flex';
            }

                        if (badges.indexOf('home-delivery') > -1) {
                const priceToDisplayBilledFrequency = el.querySelector('.fp-price-to-display-billed-frequency');
                if (priceToDisplayBilledFrequency) {
                    priceToDisplayBilledFrequency.style.display = 'none';
                }
            }
        };

        const setSubscribeButtonColour = function (el) {
            const badges = getBadgesForEl(el);

            if (badges.indexOf('btn-dark') > -1) {
                const subscribeButton = el.querySelector('.button1:not([style^="display: none"])');

                if (subscribeButton) {
                    subscribeButton.classList.remove('-ghost');
                }
            }
        }

        const listenForGigyaEvents = function () {
            if (listeningForGigyaEvents === true) {
                return;
            }

            document.body.addEventListener('fp_gigya_ready', function () {
                listeningForGigyaEvents = true;
                window.gigyaIntegration.addEventHandlers({
                    onLogin: function () {
                        userHasLoggedIn = true;
                    },
                    onLogout: function () {
                        document.getElementById('flip-pay').classList.remove('fp-prevent-html-replace');
                        userHasLoggedIn = false;
                    }
                });
            });
        }

        const flipPayScriptThresholdExpired = function () {
            const now = new Date().getTime();
            const latestFlipPayLoadTime = parseInt(localStorage.getItem('subscriptionwall.latest-load') || '0');
            const thresholdInHours = Number('0' || '0');
            const thresholdInMilliseconds = thresholdInHours * (60 * 60 * 1000);

            return now >= (latestFlipPayLoadTime + thresholdInMilliseconds);
        }

        const onHomeDeliveryPriceSelected = function (priceId) {
            selectedPrice = getBundleById(priceId);
            let eventLabel;

            if (selectedPrice.delivery_days.length === 1 && selectedPrice.delivery_days.indexOf(6) > -1) {
                eventLabel = 'saturday';
            } else if (selectedPrice.delivery_days.length === 1 && selectedPrice.delivery_days.indexOf(0) > -1) {
                eventLabel = 'sunday';
            } else if (selectedPrice.delivery_days.length === 2 && selectedPrice.delivery_days.indexOf(6) > -1 && selectedPrice.delivery_days.indexOf(0) > -1) {
                eventLabel = 'saturday_sunday';
            }

            window.dataLayer.push({
                event: '_trackEvent',
                eventCategory: 'hd_flow',
                eventAction: 'hd_options_click',
                eventLabel: eventLabel
            });
        }

        function getPriceSelected(priceID) {
            //if the item doesn't exist, return null
            if (!priceID) {
                return null;
            }

            try {
                const item = JSON.parse(priceID);
                const now = new Date();
                // compare the expiry time of the item with the current time
                if (now.getTime() > item.expiry) {
                    //If the item is expired, delete the item from storage and return null
                    localStorage.removeItem('price.selected');
                    return null;
                }
                return item.value;
            } catch (e) {
                localStorage.removeItem('price.selected');
                const item = setPriceSelected(priceID);
                return item.value;
            }
        }

        function setPriceSelected(priceID) {
            //set expiry time for selectedPriceID. Convert time from hours to milliseconds (360000 represents number of ms in an hour).
            const expiryTime = 2;
            const subscriptionwallPricesSelectedExpiry =  expiryTime * 3600000;

            const now = new Date();
            const item = {
                value: priceID,
                expiry: now.getTime() + subscriptionwallPricesSelectedExpiry,
            }
            localStorage.setItem('price.selected', JSON.stringify(item));
            return item;
        }

        const onMutation = function (mutations) {
            mutations.forEach((mutation) => {
                const element = mutation.target;

                if (element.tagName === 'BODY' && ! bodyAvailable) {
                    listenForFlipPayEvents();
                    listenForGigyaEvents();
                    bodyAvailable = true;
                    return;
                }

                                if (element.id === 'gigya-verification-sent-screen') {
                                        const priceIdFromUrl = getQueryStringValue('priceId')
                    if (priceIdFromUrl) {
                        selectedPrice = getBundleById(priceIdFromUrl);
                    }

                                        if (!isHomeDelivery) {
                        setPriceSelected(selectedPrice._id);
                    }

                                        if (addToCartFiredAfterRegistration === false) {
                        fireAddToCartEvent();
                        addToCartFiredAfterRegistration = true;
                    }
                    return;
                }

                if (mutation.type === 'childList' && element.id === 'flip-pay') {

                                        if (userHasValidSubscriberCookie()) {
                        element.classList.add('fp-prevent-html-replace');
                        flipPayConfig.show_spinner = false;
                        element.style.display = 'block';
                    }

                    if (mutation.addedNodes.length) {
                        mutation.addedNodes.forEach(node => {
                            if (node.classList && node.classList.contains('c-box1')) {
                                showPremiumBadge(node);
                                updateTemplateForHomeDelivery(node);
                                setSubscribeButtonColour(node);
                                                                showOrderSummary(node, previouslySelectedPriceId);
                                                            } else if (node.id === 'fp-tog-anch-2') {
                                const plans = node.querySelectorAll('.c-box1');
                                plans.forEach(showPremiumBadge);
                            } else if ((node.classList && node.classList.contains('n-tabbed1')) || (node['querySelector'] && node.querySelector('.n-tabbed1'))) {
                                const plans = node.querySelectorAll('.c-box1');
                                plans.forEach(function (plan) {
                                    showPremiumBadge(plan);
                                    updateTemplateForHomeDelivery(plan);
                                    setSubscribeButtonColour(plan);
                                    addShopFrontClasses(plan);
                                });
                                                                showOrderSummary(node, previouslySelectedPriceId);
                                                            } else if (node.id === 'dac-order-summary') {
                                showPremiumBadge(node);
                                                                const selectedPriceRadioInput = node.querySelector('.subtitle2 input[type="radio"]');
                                if (selectedPriceRadioInput) {
                                    selectedPriceRadioInput.style.display = 'none';
                                }
                            }

                            
                            if (node.id === 'template-prices-login-button') {
                                if (document.cookie.indexOf('guid') > -1) {
                                    node.setAttribute('hidden', '');
                                } else {
                                    node.removeAttribute('hidden');
                                }
                            }

                                                    });
                    }
                    return;
                }

                

                if (element.id === 'fp-tog-anch-2') {
                    dispatchEvent(new Event('reinitialize'));
                    return;
                }

                if (['fp-card-number', 'fp-card-expiry', 'fp-card-cvc'].indexOf(element.id) === -1) {
                    return;
                }

                element.closest('.field1').classList.toggle('-blank', element.classList.contains('StripeElement--empty'));
            });
        };

        const observer = new MutationObserver(onMutation);

        try {
            observer.observe(document, {
                attributeFilter: ['class'],
                attributes: true,
                subtree: true,
                childList: true,
            });
        } catch (e) {
            console.log('observer.observe failed:', e);
        }

        if (flipPayJsUrl) {
            const script = document.createElement('script');
            script.type = 'text/javascript';
            script.async = true;
            script.src = flipPayJsUrl;

                        if (flipPayScriptThresholdExpired() || ! userHasValidSubscriberCookie()) {
                document.head.append(script);
            }
        }
    })();

</script>
        <script>['js','r5s'].forEach(function(attr){document.documentElement.setAttribute(attr,'')});</script>
</head>

                    
