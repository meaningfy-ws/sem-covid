<script data-adworxsitepage="steiermark.orf.at/news/detail/wir">
   window.onload = function() {
      oon.adition.loadAll("steiermark.orf.at/news".split("/")[0]).then(function(response) {
         var isDesktop = oon.responsive.isDesktop();
         var bannerParts = "steiermark.orf.at/news".split("/");
         var domain = bannerParts[0];
         var path = "/" + bannerParts[1] +  "/stories";
         var platform = isDesktop ? "web" : "mob";
         var placement = isDesktop ? "sb" : "par";
         var aditionId = oon.adition.lookup(path, platform, placement);
         console.log(domain, path, platform, placement, aditionId);
         if (aditionId) {
            var sitepage = oon.adition.adformat(domain + path);
            var keywords = {"storyid":"3045288","storytitel":"\"Telearbeitsplatz-Offensive\": Über 1.000 Anträge","bewerb":"sport"};
            var subCategory = oon.adition.adformat("RedCont/Wirtschaft/Wirtschaftsueberblick".split("/").pop());
            var storyTitle = oon.adition.adformat(keywords.storytitel);
            if (isDesktop) {
               adition.srq.push(function(api) {
                  api.setProfile("viewport", "full");
                  api.setProfile("sitepage", sitepage);
                  api.setProfile("storyid", keywords.storyid);
                  api.setProfile("subcategory", subCategory);
                  api.setProfile("storytitel", storyTitle);
                  api.setProfile("storytype", "story");
                  api.setProfile("test", oon.adition.isTest());
                  var adSlot = window.adSlot = api.configureRenderSlot("sitebar-banner").setContentunitId(aditionId);
                  api.renderSlot("sitebar-banner").load().completeRendering();
                  adSlot.events.onFinishLoading(function (renderSlotElement, bannerDescriptionApi, renderControlApi) {
                     var options = bannerDescriptionApi.getOptions();
                     console.log("finished, size: ", bannerDescriptionApi.getWidth(), bannerDescriptionApi.getHeight(), bannerDescriptionApi.getOptions());
                     if (parseInt(bannerDescriptionApi.getWidth(), 10) >= 728) {
                        $("#sitebar-banner").removeClass("sitebar-banner").addClass("top1");
                     }
                  });
               });
            } else {
               adition.srq.push(function(api) {
                  api.setProfile("viewport", oon.responsive.isTablet() ? "tablet" : "phone");
                  api.setProfile("sitepage", sitepage);
                  api.setProfile("storyid", keywords.storyid);
                  api.setProfile("subcategory", subCategory);
                  api.setProfile("storytitel", storyTitle);
                  api.setProfile("storytype", "story");
                  api.setProfile("test", oon.adition.isTest());
                  api.configureRenderSlot("px-wrapper").setContentunitId(aditionId);
                  api.renderSlot("px-wrapper").load().completeRendering();
               });
               oon.parallax();
            }
         }
      });
   }
</script>



