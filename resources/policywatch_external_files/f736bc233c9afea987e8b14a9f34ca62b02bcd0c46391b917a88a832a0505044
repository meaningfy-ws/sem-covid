<script type="text/javascript">
	
	$(document).ready(function() {
		fixSize();
		
		if(document.location.href.indexOf("#")!=-1) {
			var url = document.location;				
			var link;
			link = url.href.split("#");			
			
			if($('#'+link[1])[0]) {
				$("#"+link[1]).focus();
				$('.right').scrollTo('#'+link[1],200,{offset:-40});
				
			}
		}
		var winHeightAktual = $(window).height();	
		var footerHeight = $("#footer").height();
		
		//alert(winHeightAktual);
		//alert(headerHeight);
		//alert(footerHeight);
		$(window).resize(function() {
			winHeight = $(window).height();			
			$("#content").css("height",(winHeight-155-50)+"px");
			$("#left").css("height",(winHeight-155-50)+"px");	
		});
		if($('#jou2').length>0) {
			$('#left').scrollTo('#jou2',200,{offset:-40});		
		} else {
			if($('#jou').length>0) {
				$('#left').scrollTo('#jou',200,{offset:-40});
			}
		}
		
	});
		$(window).resize(fixSize);
	
	function goToByScroll(id){
	      $('html,body').animate({scrollTop: $("#"+id).offset().top},'slow');
	}
		
	function fixSize() {
		var filter_height = najcastejsie_height = back_holder_height = category_pager_top_height = heading_box_height = 0;
		if ($('#grey-box').length > 0) {
			filter_height = $('#grey-box').outerHeight(true);
		}
		
		if ($('#najcastejsie').length > 0) {
			najcastejsie_height = $('#najcastejsie').outerHeight(true);
		}
		
		if ($('#back_holder').length > 0) {
			back_holder_height = $('#back_holder').outerHeight(true);
		}
		if ($('#category_pager_top').length > 0) {
			category_pager_top_height = $('#category_pager_top').outerHeight(true);
		}
		
		if ($('.heading-box').length > 0) {
			heading_box_height = $('.heading-box').outerHeight(true);
		}
				
		 
		var constant = 177+filter_height+back_holder_height+najcastejsie_height + category_pager_top_height + heading_box_height; <!-- 218 203-->	<!-- 211	 -->
		
		var constant2 = 245+filter_height+back_holder_height+najcastejsie_height + category_pager_top_height + heading_box_height; <!-- 218 -->
		<!-- 279 -->
		var constant3 = 210;
		var dh = $(document).height();
		var ch = $(window).height();
		var th = $('#content').height();
		
		if (dh - th > constant) {
			//alert($('#header').outerHeight(true));
			$('#content').height(ch - 214);			
			$('.td-left').css("height","auto"); // aby  v explorer 8 roztiahol td						
			$('#right').css("height",(ch - constant2)+"px");
			$('#left').height(ch-constant3);
		} else if(dh - ch >0) {
			$('#right').height(ch - constant2);
			//alert($('#right').height());
			//$('#left').height(ch - constant);
			$('#left').height(ch-constant3);
		} else {
			$('#right').height(ch - constant2);
		}
	}

	function getDocHeight() {
		var D = document;
		return Math.max(
			Math.max(D.body.scrollHeight, D.documentElement.scrollHeight),
			Math.max(D.body.offsetHeight, D.documentElement.offsetHeight),
			Math.max(D.body.clientHeight, D.documentElement.clientHeight)
		);
	}	
	
</script>
