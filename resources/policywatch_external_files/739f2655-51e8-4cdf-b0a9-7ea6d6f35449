jq(function() {
  var canonical = jq( 'link[rel="canonical"]' ).attr( 'href' );
  var pieces = canonical.split(".com/");
  var path = pieces[1].split("/");

  if ( path[1] === "politics" ) {
    jq( '.article_footer_subscribe' ).addClass( 'politics' );
  }else if(path[1] === "world"){
    jq( '.article_footer_subscribe' ).addClass( 'world' ); 
  }
    
});
