    <script>

        function replaceScript() {
            var toReplace = '<a href="javascript:;">Proiect</a>';
            var replaceWith = '';
            document.body.innerHTML = document.body.innerHTML.replace(toReplace, replaceWith);
        }
        replaceScript();

        if (navigator.appVersion.indexOf("MSIE 8.") != -1) {
            $("#toTop").hide();
            $(".meniunu").hide();
            $(".icon-bar").hide();
            $("#btnNavbar").hide();
            $(".navbar-header").hide();
            $("body").css("min-width", "600px");

        }

       /* if (navigator.appName.indexOf("Netscape") != -1) {
            $("#page_wrapper").css("transform", "scale(0.8)");
            alert(0);
            $("#page_wrapper").css("transform-origin", "50% 0% ");
        }*/
    </script>
    
