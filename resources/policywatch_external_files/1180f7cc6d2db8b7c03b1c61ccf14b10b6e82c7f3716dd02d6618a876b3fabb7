   svDocReady(function() {
      // Queries server for a suggestion list and shows it below the search field
      $svjq("#search12_33f2d2211574b50350a23bff").svAutoComplete({
         source: "/4.5d4267f7170c014f2fca1ddd/12.33f2d2211574b50350a23bff.json?state=autoComplete",
         minLength: 2,
         delay: 200,
         selectedValueContainerId: ""
      });
   // Fallback if browser doesn't support the html5 placeholder attribute
   if (!sv.ClientUtil.supportsPlaceholder) {
      // Ensure initial value
      if ($svjq("#search12_33f2d2211574b50350a23bff").val() == "") {
         $svjq("#search12_33f2d2211574b50350a23bff").val("Enter search terms");
      }
      // Ensures 'search here' text is properly cleared when entering search field
      $svjq("#search12_33f2d2211574b50350a23bff").on('focusin', function() {
         if ($svjq("#search12_33f2d2211574b50350a23bff").val() == "Enter search terms") {
            $svjq("#search12_33f2d2211574b50350a23bff").val("");
            return false;
         }
      });
      // Ensures 'search here' text is properly set when leaving search field
      $svjq("#search12_33f2d2211574b50350a23bff").on('focusout', function() {
         if ($svjq("#search12_33f2d2211574b50350a23bff").val() == "") {
            $svjq("#search12_33f2d2211574b50350a23bff").val("Enter search terms");
            return false;
         }
      });
   }
      // Submit, blocks empty search and 'search here' search
      $svjq("#search12_33f2d2211574b50350a23bffbutton").on('click', function() {
         var qry = $svjq("#search12_33f2d2211574b50350a23bff").val();
         if (qry == "") {
            $svjq("#search12_33f2d2211574b50350a23bff").val("Enter search terms");
            return false;
         } else if (qry == "Enter search terms") {
            return false;
         }
      });
      // Invokes the search button if user presses the enter key (needed in IE)
      $svjq("#search12_33f2d2211574b50350a23bff").on('keypress', function(e) {
         if (e.which == 13) {
            $svjq("#search12_33f2d2211574b50350a23bffbutton").trigger('focus').trigger('click');
            return false;
         }
      });
   });
</script>

