<script data-adworxsitepage="news.orf.at/detail/wir">
   oon.adition.loadAll("news.orf.at").then(function(response) {
      var isDesktop = oon.responsive.isDesktop();
      var domain = "news.orf.at";
      var path = "/detail/wir";
      var platform = isDesktop ? "web" : "mob";
      var placement = isDesktop ? "sb" : "par";
      var aditionId = oon.adition.lookup(path, platform, placement);
      console.log(domain, path, platform, placement, aditionId);
      if (aditionId) {
         var sitepage = oon.adition.adformat(domain + path);
         var keywords = {"storyid":"3186220","storytitel":"gehaelter-im-handel-steigen-um-1-5-prozent","subcategory":"wirtschaftspolitik","storytype":"story","livestatus":"off"};
         adition.srq.push(function(api) {
            for (var key in keywords) {
               api.setProfile(key, keywords[key]);
            }
            api.setProfile("test", oon.adition.isTest());
            api.setProfile("sitepage", sitepage);
            if (isDesktop) {
               api.setProfile("viewport", "full");
               api.configureRenderSlot("sitebar-banner").setContentunitId(aditionId);
               api.renderSlot("sitebar-banner").load().completeRendering();
               api.events.onPostRender(function($elem, description) {
                  var adOptions = description.getOptions();
                  var adTitle = adOptions.adTitle
                  var storyBanner = document.querySelector(".story-banner")
                  if (adTitle && storyBanner) {
                     storyBanner.setAttribute("data-ad-title", adTitle)
                  }
               });
            } else {
               var wrapperId = "adworx-content";
               oon.adworxWrapper();
               api.setProfile("viewport", oon.responsive.isTablet() ? "tablet" : "phone");
               api.configureRenderSlot(wrapperId).setContentunitId(aditionId);
               api.renderSlot(wrapperId).load().completeRendering();
            }
         });
      }
   });
</script>


