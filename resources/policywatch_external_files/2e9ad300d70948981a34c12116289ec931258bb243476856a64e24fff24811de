		<script>
			
(function( $ ) {

		  // Browser supports HTML5 multiple file?
		  var multipleSupport = typeof $('<input/>')[0].multiple !== 'undefined',
		      isIE = /msie/i.test( navigator.userAgent );

		  $.fn.customFile = function() {

		    return this.each(function() {

		      var $file = $(this).addClass('customfile'), // the original file input
		          $wrap = $('<div class="customfile-wrap">'),
		          $input = $('<input type="text" autocomplete="off" class="customfile-filename" id="'+ $file[0].id +'_custom" />'),
		          // Button that will be used in non-IE browsers
		          $button = $('<button type="button" class="customfile-upload">Επισύναψη</button>'),
		          // Hack for IE
		          $label = $('<label class="customfile-upload" for="'+ $file[0].id +'">Επισύναψη</label>');

		      // Hide by shifting to the left so we
		      // can still trigger events
		      $file.css({
		        position: 'absolute',
		        left: '-9999px'
		      });

		      $wrap.insertAfter( $file )
		        .append( $file, $input, ( isIE ? $label : $button ) );

		      // Prevent focus
		      $file.attr('tabIndex', -1);
		      $button.attr('tabIndex', -1);

		      $button.click(function () {
		        $file.focus().click(); // Open dialog
		      });

		      $file.change(function() {

		        var files = [], fileArr, filename;

		        // If multiple is supported then extract
		        // all filenames from the file array
		        if ( multipleSupport ) {
		          fileArr = $file[0].files;
		          for ( var i = 0, len = fileArr.length; i < len; i++ ) {
		            files.push( fileArr[i].name );
		          }
		          filename = files.join(', ');

		        // If not supported then just take the value
		        // and remove the path to just show the filename
		        } else {
		          filename = $file.val().split('\\').pop();
		        }

		        $input.val( filename ) // Set the value
		          .attr('title', filename) // Show filename in title tootlip
		          .focus(); // Regain focus
				  
				  $("div.valueDefault"+$file[0].id).hide();
				
				  if (filename=='') { 
				   	$('input#'+$file[0].id+'_caption').val('');
				  }
				  else {
				 	 $('input#'+$file[0].id+'_caption').val('1');					 
					  $('input#'+$file[0].id+'_custom').css('border', '1px solid #C9C9C9');
				
				  }
				
		      });

		      $input.on({
		        blur: function() { $file.trigger('blur'); },
		        keydown: function( e ) {
		          if ( e.which === 13 ) { // Enter
		            if ( !isIE ) { $file.trigger('click'); }
		          } else if ( e.which === 8 || e.which === 46 ) { // Backspace & Del
		            // On some browsers the value is read-only
		            // with this trick we remove the old input and add
		            // a clean clone with all the original events attached
		            $file.replaceWith( $file = $file.clone( true ) );
		            $file.trigger('change');
		            $input.val('');
					$('input#'+$file[0].id+'_caption').val('');
		          } else if ( e.which === 9 ){ // TAB
		            return;
		          } else { // All other keys
		            return false;
		          }
		        }
		      });

		    });

		  };

		  // Old browser fallback
		

		}( jQuery ));
		
		
		function checkFile(field) {
			
			var ext = document.getElementById(field).value;
			var ext4 = document.getElementById(field).value;
			ext = ext.substring(ext.length-3,ext.length);
			ext = ext.toLowerCase();
			ext4 = ext4.substring(ext4.length-4,ext4.length);
			ext4 = ext4.toLowerCase();
			
			if(ext != 'doc' && ext != 'pdf' && ext != 'tif' && ext != 'zip' && ext != 'rar' && ext4 != 'docx' && ext4 != 'tiff' && ext4 != 'jpeg' && ext != 'jpg' && ext != 'png') {
				document.getElementById(field).value='';
				
				if (ext!='') {
				alert("Παρακαλώ επιλέξτε σωστό τύπο αρχείου(.jpg, .doc, .docx, .pdf)");
				}
				document.getElementById(field).value='';
			return false; 
			} else {
				
						//document.getElementById('fileCaption').value=document.getElementById("file_ocr").value;
			return true;
			}
		}
		
		function validatesixten(field,sIDCard) {
			
			var activity_id = jQuery('#activity_id').val();	
			
			var telLength = jQuery('#'+field).val().length;				
			if (telLength < 6 || telLength>10) {					
				jQuery('#'+field).css('border', '1px solid #FF6464');
				
				jQuery('#'+field).val('');
				if (sIDCard=='0') {
					
					jQuery('#koinAsfTR').html('Επιτρέπεται η καταχώρηση από 6 έως και 10 χαρακτήρων');
					jQuery('#koin_asf').css('border', '1px solid #FF6464');
				} 
				if (sIDCard!='0') {
				if (field=='ind_sosial_ins') { 
					jQuery('#wrongSocialCard').html('Επιτρέπεται η καταχώρηση από 6 έως και 10 χαρακτήρων');
					
				}
				else {
					jQuery('#wrongIDCard').html('Επιτρέπεται η καταχώρηση από 6 έως και 10 χαρακτήρων');
				}
				}
						
				}
				else {
					jQuery('#wrongIDCard').html('');
					
					if (sIDCard==1) {
						var sIDCardEm = jQuery('#ind_identity').val();
						checkIDCardValidEmployer(sIDCardEm);
					}
					else if (sIDCard==11) {
						var sIDCardEm = jQuery('#ind_sosial_ins').val();
						if (activity_id==2) { 
							checkSocialValidEmployerStap(sIDCardEm);
						}
						else {
							checkSocialValidEmployer(sIDCardEm);
						}
					}
					
					else if (sIDCard!='0') {
						//console.log(field);
						var citiz = jQuery('#citizenship_id').val();
						var type = jQuery('#type_id').val();
						var country = jQuery('#ic_country_id').val();
						var countrypass = jQuery('#passport_issued_country').val();
						
						var cou="";
						if (citiz==1) {
							cou='CYP';
						}
						else if (citiz==2) {
							if (type==1) {
								cou=country;
							}
							else {
								cou=countrypass;
							}
						}
						
						else {
							if (type==2) { 
								cou=countrypass;
							}
							else {
								cou='CYP';
							}
						}
						//console.log(cou);
							if (activity_id==2) {
								checkIDCardValidStap(sIDCard,field,cou);
							}
							else {
								checkIDCardValid(sIDCard,field,cou);
							}
							
						}
					}
			}
			
		function logoutUser() { 
			var r=confirm("Είστε σίγουροι ότι θέλετε να αποσυνδεθείτε;");
			if (r==true) {
				location.href='/easyconsole.cfm/page/myaccount/logout/true';
			}
		}	
		</script>
