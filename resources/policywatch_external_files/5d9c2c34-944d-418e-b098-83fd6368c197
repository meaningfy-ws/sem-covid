        $(window).on('scroll', function () {
            if (($(window).scrollTop() < 100) && ($(document).width() > 1170)) {
                console.log("a " + $(document).width());
                $('.corner').fadeIn('fast');
            }
            else {
                console.log("b " + $(document).width());
                $('.corner').fadeOut('fast');
            }
        });

        // activte/deactivate fixed menu
        $(window).on('scroll', function () {
            if ($(window).scrollTop() < 100) {
                $('.static-menu').css('opacity', '1');
                $('.top-logo').animate({ width: '28%' }, { queue: false, duration: 50 });
                $('.top-menu').fadeOut('fast');
                $('.top-menu').css('height', '0px');;
                $('.top-social').css( 'height', 'auto' );
                $('.top-social').fadeIn("fast");
            }

            if ($(window).scrollTop() >= 100) {
                $('.static-menu').css('opacity', '0');
                $('.top-logo').animate({ width: '15%' }, { queue: false, duration: 50 });
                $('.top-social').fadeOut('fast');
                $('.top-social').css('height', '0px');
                $('.top-menu').css('height', 'auto');
                $('.top-menu').fadeIn('fast');
            }
        });

        // operate news tickers
        $(document).ready(function () {
            var j = 0;
            var delay = 7000; //millisecond delay between cycles
            function cycleThru() {
                var jmax = $(".headlines-list li").length - 1;
                $(".headlines-markers li:eq(" + j + ")").addClass("marker-active").delay(delay).queue(function () {
                    $(this).removeClass("marker-active").dequeue();
                });

                $(".headlines-list li:eq(" + j + ")").fadeIn(400).delay(delay).fadeOut(400,
                    function () {
                        (j == jmax) ? j = 0 : j++;
                        cycleThru();
                    });
            };

            cycleThru();
        });

        // members area buttons
        $('.pink-block a').on('mouseover', function () {
            $(this).parent().parent().css('opacity', '.8');
        });

        $('.pink-block a').on('mouseout', function () {
            $(this).parent().parent().css('opacity', '1');
        });

        //ANALYTICS CODE
        var _gaq = _gaq || [];
        _gaq.push(['_setAccount', 'UA-59726477-1']);
        _gaq.push(['_trackPageview']);

        (function () {
            var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
            ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'https://www') + '.google-analytics.com/ga.js';
            var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
        })();

    </script>

    

</body>
</html>
