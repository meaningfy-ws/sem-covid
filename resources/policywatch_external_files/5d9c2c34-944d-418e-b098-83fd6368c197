        //show hide corner arrow thingy
        //on resize if doc width greater than 1170px show
        $(window).on('resize', function () {
            if ($(document).width() > 1170) {
                console.log("x " + $(document).width());
                $('.corner').fadeIn('fast');
            }
            else {
                console.log("y " + $(document).width());
                $('.corner').fadeOut('fast');
