                jq(parent).html(htmlBlock);
                // Hide notification
                jq(parent).delay(1000).fadeOut('slow');
            });

            jq(document).on('click', '.read-next--dismiss', function () {
                // Hide notification
                jq(this).trigger('notify-hide');
