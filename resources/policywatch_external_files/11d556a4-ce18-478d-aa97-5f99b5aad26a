            var cookieName = "IT_dismissCRE";

            function setCRECookie() {
                years = 99;
                days = 365;
                now = new Date();
                now.setTime(now.getTime() + (years * days * 24 * 60 * 60 * 1000));
                jq.cookie(cookieName, 1, {
                            expires: years * days,
                            path: '/'
                        }
                );
            }

            jq(document).on('click', '.read-next--optout', function () {
                // Set cookie for permanently dismissing CRE
