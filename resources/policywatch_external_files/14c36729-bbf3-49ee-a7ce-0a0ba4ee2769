").on("click",function(){$(this).siblings(".Skupina").toggle();if($(this).attr("src")==="/static/plustree.png"){$(this).attr("src","/static/minustree.png")}else{$(this).attr("src","/static/plustree.png")}});$(window).on("resize",function(){adjustSideBar(true)});$(window).scroll(function(){adjustSideBar(false)})},false);</script> </div> </div> </div> </div> </div> </div> </div> <form action="#" id="hrefFm" method="post" name="hrefFm"> <span></span> </form> </div> <!-- BottomBaner s logami--> <div class="hidden-desktop" id="bottomBanner"> <div class="container"><a href="http://www.opis.gov.sk"><img alt="OPIS" src="/slovlex-theme/images/footer/footerleft.png" /></a> <a href="http://www.vlada.gov.sk"><img alt="ROOPIS" src="/slovlex-theme/images/footer/footerright1.png" /></a> <a href="http://www.finance.gov.sk"><img alt="SOOPIS" src="/slovlex-theme/images/footer/footerright2.png" /></a> <a href="http://europa.eu/index_sk.htm"><img alt="EU" src="/slovlex-theme/images/footer/footerright3.png" /></a></div> </div> <div class="visible-desktop" id="bottomBanner"> <div class="container"><a href="http://www.opis.gov.sk"><img alt="OPIS" src="/slovlex-theme/images/footer/footerleft.png" /></a> <a href="http://www.vlada.gov.sk"><img alt="ROOPIS" src="/slovlex-theme/images/footer/footerright1.png" /></a> <a href="http://www.finance.gov.sk"><img alt="SOOPIS" src="/slovlex-theme/images/footer/footerright2.png" /></a> <a href="http://europa.eu/index_sk.htm"><img alt="EU" src="/slovlex-theme/images/footer/footerright3.png" /></a></div> </div> <!-- /BottomBaner s logami--> <div id="footer" role="contentinfo"> <div class="container"> <div class="row-fluid show-grid"> <div class="span3"> <div class="header">SEKCIE</div> <div> <ul> <li><a href="/pravne-predpisy">Chronologický register</a></li> <li><a href="/tezaurus-slovenskeho-prava">Tezaurus slovenského práva</a></li> <li><a href="/pravo-eu">Právo EÚ</a></li> </ul> </div> </div> <div class="span3"> <div class="header">PODPORA</div> <div>