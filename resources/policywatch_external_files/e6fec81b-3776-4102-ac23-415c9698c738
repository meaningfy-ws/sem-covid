	<!-- Timeline : start -->
	<div class="col-md-24 path no-padding">
		



	<script src="/assets/js/timeline/moment-with-locales.js"></script>
	<script src="/assets/js/timeline/vis.min.js"></script>  
	<link href="/assets/css/timeline/vis.min.css" rel="stylesheet" type="text/css" />
	<link href="/assets/css/timeline/timeline-legilux.css" rel="stylesheet" type="text/css" />
	
	<div id="visualization" tabindex="-1">
		<div class="tl-menubar">
			<span class="tl-menubar-button" id="tl-zoom-in">
				<span class="tl-icon-zoom-in"></span>
			</span>
			<span class="tl-menubar-button" id="tl-zoom-out">
				<span class="tl-icon-zoom-out"></span>
			</span>
			<span class="tl-menubar-button" id="tl-fit">
				<span class="tl-icon-goback"></span>
			</span>
		</div>	
	</div>
	
	<script type="text/javascript">
		var json = [{"id":1,"group":"1","content":"<a href=\"/eli/etat/leg/rgd/2020/03/27/a207/jo\">Publication<span class=\"showOnHover\">, 27/03/2020</span></a>","start":"2020-03-27","className":"tl-group-publication"},{"id":2,"group":"0","content":"<a href=\"/eli/etat/leg/rgd/2020/05/11/a381/jo\">Modifié par<span class=\"showOnHover\">, 11/05/2020</span></a>","start":"2020-05-11"},{"id":3,"group":"0","content":"<a href=\"/eli/etat/leg/rgd/2020/05/15/a403/jo\">Modifié par<span class=\"showOnHover\">, 15/05/2020</span></a>","start":"2020-05-15"}];	
	
		// create a dataset with items
		// we specify the type of the fields `start` and `end` here to be strings
		// containing an ISO date. The fields will be outputted as ISO dates
		// automatically getting data from the DataSet via items.get().
		var items = new vis.DataSet({
			type: { start: 'ISODate', end: 'ISODate' }
		});
		  
		var groups = new vis.DataSet([
			{id: 0, content: '', value: 1},
			{id: 1, content: '', value: 2}
		]);
		
		// add items to the DataSet
	 	items.add(json);
				
	 	var visItems = items.get();
		var modifierStartDates = new Map();
		for (var i = 0; i < visItems.length; i++) {
			var visItem = visItems[i];		
			
			// Modification des items ayant une date de fin à 2999-01-01 (donc pas de fin réelle)
			if(visItem.end != null && visItem.end == "2999-01-01T00:00:00.000Z") {			
				var dateNow = new Date();
				
				var startDate = new Date(visItem.start);
				var endDate = new Date(visItem.end);
				
				// Consolidation dans le futur
				if(dateNow.getTime() - startDate.getTime() < 0) {
					// On ajoute un an à la date de début
					visItem.end = new Date(startDate.getFullYear(), startDate.getMonth(), startDate.getDate());
				} else {
					// Date du jour + un an
					visItem.end = new Date(dateNow.getFullYear(), dateNow.getMonth(), dateNow.getDate());
				}
				
				// Ajout d'une classe spécifique pour afficher un background
				if(visItem.className.indexOf("zoneTransparent") > -1) {
					visItem.className = visItem.className + " zoneEndless";
				}				
				
				items.update(visItem);
			}
			
			// Décalage pour les modificateurs ayant la même date
			if(visItem.group == "0") {
				var marginSize = modifierStartDates.get(visItem.start);
				if(marginSize != null) {
					visItem.style = "margin-left: " + marginSize + "px;";
					items.update(visItem);
					// Incrémentation du décalage
					modifierStartDates.set(visItem.start, 10 + marginSize);
				}
				else {
					// Ajout de la date du modificateur et du decalage pour le prochain item
					modifierStartDates.set(visItem.start, 10);
				}				
			}
		}
		
		var container = document.getElementById('visualization');
		var options = {
	// 		start: '2016-01-10',
	// 		end: '2016-02-10',
			selectable : false,
		   	editable: false,
		   	showCurrentTime: true,
			height: '130px',
			stack: false,	
			locale: 'fr',
			zoomMin: 2419200000,
			zoomMax: 10536000000000
		};
		
		// Création de la Timeline
		var timeline = new vis.Timeline(container, items, options);
		timeline.setGroups(groups);
		timeline.fit({animation:false});
		// Redmine Legilux #18486
		timeline.zoomOut(0.2, {animation:false});
			  
		// Fonction des boutons
		document.getElementById('tl-zoom-in').onclick = function() {
			timeline.zoomIn(0.5);
		};
		document.getElementById('tl-zoom-out').onclick = function() {
			timeline.zoomOut(0.5);
		};
		document.getElementById('tl-fit').onclick = function() {
			timeline.fit({animation:false});
			// Redmine Legilux #18486
			timeline.zoomOut(0.2, {animation:false});
		};
		  	  
		// Hover groupé
		$("div[class*='tl-group-']").hover(
			function(e) {
				var groupClass = $(this).attr("class").match(/tl-group-[\w-]*\b/);
				$("." + groupClass[0]).addClass("tl-item-hover");
			}, function(e) {
				var groupClass = $(this).attr("class").match(/tl-group-[\w-]*\b/);
				$("." + groupClass[0]).removeClass("tl-item-hover");
			}
		);	  
		$(".vis-item-content, .vis-item-overflow").click(function(e) {
			var link = $(this).find("a").attr('href');
			if(link != null) {
				document.location.href = link;
			}
			else {
				return false;
			}
		});	
		
		// Surcharge des liens pour y ajouter le contexte
		$(document).ready(function(){
			$(".vis-timeline a").each(function() {
				var href = "" + $(this).attr("href");
				$(this).attr("href", href);
			});
		});
		
		// Sélection des items dans la timeline
		var itemsToSelect = new Array();
		$.each(json, function(i, v) {
			var contentId = "http://data.legilux.public.lu/eli/etat/leg/rgd/2020/03/27/a207/jo" + "";
			var itemContent = v.content;
			
			if($(itemContent).attr("href").length > 0) {
				var href = $(itemContent).attr("href");
				
				if(href != undefined && href.length > 0){
					var itemLink = href.substring(7);
					if (contentId.indexOf(itemLink) > -1 && !(v.className.indexOf("zoneTransparent") > -1)) {
				        itemsToSelect.push(v.id);
				    }
				}
			}
		});
		if(itemsToSelect.length > 0) {
			timeline.setSelection(itemsToSelect);			
		}
	</script>

	</div>
	<!-- Timeline : end -->
	
