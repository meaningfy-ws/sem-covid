<script type="text/javascript">
			function toggleMainDoc(x) {
				x.classList.toggle("fa-eye-slash");
				var mainDoc = document.getElementById("mainAct");
				if (mainDoc.style.display === "none") {
					mainDoc.style.display = "inline";
					document.getElementById("viewMainDoc").style.display = "none";
					document.getElementById("hiddeMainDoc").style.display = "inline";
				} else {
					mainDoc.style.display = "none";
					document.getElementById("viewMainDoc").style.display = "inline";
					document.getElementById("hiddeMainDoc").style.display = "none";
				}
			}			
			function toggleModsToc(x) {
				x.classList.toggle("fa-arrow-circle-down");
				var toc = document.getElementById("myModsTOC");
				if (toc.style.display === "none") {
					toc.style.display = "inline";
				} else {
					toc.style.display = "none";
				}
			}			
			function toggleModsRef(x) {
				x.classList.toggle("fa-eye-slash");
				var mods = document.querySelectorAll("[id*=mod_]");
				var i;
				
				for (const mod of mods) {
					if (mod.style.display === "none") {
						mod.style.display = "inline";
					} else {
						mod.style.display = "none";
					}
				}
			}
			function setCssTextStyle(el, style, value) {
			  var result = el.style.cssText.match(new RegExp("(?:[;\\s]|^)(" +
				  style.replace("-", "\\-") + "\\s*:(.*?)(;|$))")),
				idx;
			  if (result) {
				idx = result.index + result[0].indexOf(result[1]);
				el.style.cssText = el.style.cssText.substring(0, idx) +
				  style + ": " + value + ";" +
				  el.style.cssText.substring(idx + result[1].length);
			  } else {
				el.style.cssText += " " + style + ": " + value + ";";
			  }
			}
			function highlightMod(id) {
				var elem = document.getElementById(id);
				setCssTextStyle(elem, "color", "#e4f70a !important");
				setCssTextStyle(elem, "font-weight", "bold !important");
			}
			function unHighlightMod(id) {
				var elem = document.getElementById(id);
				elem.style.removeProperty("color");
				elem.style.removeProperty("font-weight");
				setCssTextStyle(elem, "color", "#007DAD !important");
			}
		</script>
							
							
							
