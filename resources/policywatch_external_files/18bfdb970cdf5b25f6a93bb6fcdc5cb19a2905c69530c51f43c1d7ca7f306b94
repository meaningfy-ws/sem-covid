<script type="text/javascript">
	function showCitat(){
		document.getElementById('osnovniCitat').style.display="";
		document.getElementById('strokAnaliZgodovina').style.display="none";
		document.getElementById('zgodovinaLink').style.textDecoration="underline"; 
		document.getElementById('zgodovinaLink').style.fontWeight="normal";
		document.getElementById('citatLink').style.textDecoration="none";
		document.getElementById('citatLink').style.fontWeight="bolder";
	}

	function showZgodovina(){
		document.getElementById('osnovniCitat').style.display="none";
		document.getElementById('strokAnaliZgodovina').style.display="";
		document.getElementById('zgodovinaLink').style.textDecoration="none"; 
		document.getElementById('zgodovinaLink').style.fontWeight="bolder";
		document.getElementById('citatLink').style.textDecoration="underline";
		document.getElementById('citatLink').style.fontWeight="normal";
	}
</script>
