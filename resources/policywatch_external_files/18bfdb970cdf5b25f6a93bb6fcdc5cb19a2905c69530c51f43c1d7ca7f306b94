    <script type="text/javascript">
    $(document).ready(function() {
        $("#mainPartCss").show();
        // remove $
        $("#rev").text(
                $("#rev").text().replace(/\$/g, " ")
        );
        // replace Rev
        $("#rev").text(
                $("#rev").text().replace("Rev:", "ver")
        );
    });

    function showPopup() {
        // on key down Esc, close popup
        $(document).keydown(function(event) {
            if (event.keyCode == '27') {
                closePopup(true);
            }
        });

        $('#popup').fadeIn('fast');
        $('#mask').fadeIn('fast');
    }

    function closePopup() {
        $('#popup').fadeOut(0);
        $('#mask').fadeOut(0);
    }
</script>

    
    <script type="text/javascript">
        $(document).ready( function() {
            var jqChange = $('#cc-notification-moreinfo'),
                    jqMore = $('#aMore'),
                    jqSave = $('#cc-approve-button-thissite'),
                    jqEtcPanel = $('#cc-notification-permissions'),
                    jqGaeChk = $('#cc-checkbox-analytics'),
                    isOpened = false,
                    clearCookies = function(){
                        var duration = 365, c = new Date();
                        c.setDate(c.getDate() + duration);
                        document.cookie = "ccGae=no;expires=" + c.toUTCString() + ";path=/Pis.web;";
                        window.location.href = window.location.href.split('#')[0] +  (window.location.href.indexOf("?") > -1 ? '' : '?') + '&' + Math.random();
                    },
                    setCookies = function(){
                        var duration = 365, c = new Date();
                        c.setDate(c.getDate() + duration);
                        document.cookie="ccGae=yes;expires=" + c.toUTCString() + ";path=/Pis.web;";
                        $('div#cc-notification').remove();
                    };
            jqSave.click(function(){
                jqGaeChk.is(':checked') ? setCookies() : clearCookies();
                jqEtcPanel.toggle();
            });
            jqMore.click(function(){
                window.location.href = '/Pis.web/cm?idStrani=piskotki';
            });
            jqChange.click(function(){
                jqEtcPanel.toggle();
                isOpened = !isOpened;
                isOpened ? $(this).text('skrij nastavitve') : $(this).text('spremeni nastavitve');
                isOpened ? jqSave.text('Shrani nastavitve') : jqSave.text('Skrij obvestilo');
            });
        });
    </script>
    

