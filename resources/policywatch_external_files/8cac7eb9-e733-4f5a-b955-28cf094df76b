          $('#languageSelector-fr').remove();
          $('#languageSelector-nl').remove();
          $('#languageSelector-en').remove();
          $('#languageSelector-de').remove();

          var itemFr = $('#languageField-fr');
          var itemNl = $('#languageField-nl');
          var itemDe = $('#languageField-de');
          var itemEn = $('#languageField-en');

          var classFr = 'languages__item';
          var classNl = 'languages__item';
          var classDe = 'languages__item';
          var classEn = 'languages__item';

          var currentLanguage = $('#languageFieldActive').val();

          switch (currentLanguage) {
          case "FR":
            classFr += ' is-active';
            break;
          case "NL":
            classNl += ' is-active';
            break;
          case "DE":
            classDe += ' is-active';
            break;
          case "EN":
            classEn += ' is-active';
            break;
          default:
          }

          if (itemFr.val() != undefined) {
          $('#languageSelectorContainer').append(
            $('<li>').attr('class', classFr)
                .append($('<a>').attr('href', itemFr.val())
                    .append($('<span>').append(itemFr.attr('name'))
                    )));
          }

          if (itemNl.val() != undefined) {
          $('#languageSelectorContainer').append(
            $('<li>').attr('class', classNl)
                .append($('<a>').attr('href', itemNl.val())
                    .append($('<span>').append(itemNl.attr('name'))
                    )));
          }

          if (itemDe.val() != undefined) {
          $('#languageSelectorContainer').append(
            $('<li>').attr('class', classDe)
                .append($('<a>').attr('href', itemDe.val())
                    .append($('<span>').append(itemDe.attr('name'))
                    )));
          }

          if (itemEn.val() != undefined) {
          $('#languageSelectorContainer').append(
            $('<li>').attr('class', classEn)
                .append($('<a>').attr('href', itemEn.val())
                    .append($('<span>').append(itemEn.attr('name'))
                    )));
          }

