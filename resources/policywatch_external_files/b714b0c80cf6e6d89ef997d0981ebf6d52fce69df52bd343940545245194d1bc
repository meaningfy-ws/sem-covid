<script>
function pintarPantallaLogin() {
              var registro_tipo = "";
              if(typeof utag_data.epi_tipo!='undefined'){
                            if(utag_data.epi_tipo!=null && utag_data.epi_tipo!="")
                                          registro_tipo = "&" + "registro_tipo=" + utag_data.epi_tipo;
              }
              if(typeof utag_data.epi_subtipo!='undefined'){
                            if(utag_data.epi_subtipo!=null && utag_data.epi_subtipo!="")
                                          registro_tipo = registro_tipo + "&" + "registro_subtipo=" + utag_data.epi_subtipo;
              }
              window.location = urlmicuenta + "login?redirect=" + window.location + registro_tipo;
};
