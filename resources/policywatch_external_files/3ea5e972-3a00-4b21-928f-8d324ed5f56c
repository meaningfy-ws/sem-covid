    <script>
    //Autocomplete is disabled for now
    

    function validateSearchForm(inputId, isMobileVersion, alertId) {
        var textInput = $("#" + inputId).val();
        var passedValidation = validateSearchInput(textInput);

        if (passedValidation) {
            //Sends true to sumbit the form to the server
            return passedValidation;
        }
        else if (isMobileVersion) {
            //Sends false to NOT sumbit the form to the server and shows error message in the placeholder instead
            $("#" + inputId).val("");
            var placeHolderText = "Otillåtna symboler i sökfältet" + ": " + textInput;
            $("#" + inputId).attr("placeholder", placeHolderText);

            return passedValidation;
        }

        //Sends false to NOT sumbit the form to the server and shows error message instead
        $("#" + alertId).show();
        return passedValidation;
    }

    function validateSearchInput(input) {
        var regex = /(<|>)/;

        if(regex.test(input)) {
            return false;
        }

        return true;
    }
    </script>

