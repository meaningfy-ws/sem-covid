        google.charts.setOnLoadCallback(chartORMBrojKorisnika);
        google.charts.setOnLoadCallback(chartORMStrukturaKorisnika);
        google.charts.setOnLoadCallback(chartORMIsplacenaSredstva);
        google.charts.setOnLoadCallback(chartORMUdioPoslodavacaVelicina);
        google.charts.setOnLoadCallback(chartORMBrojRadnikaVelicinaPoslodavca);

        function chartORMBrojKorisnika() {
            var data = google.visualization.arrayToDataTable([
                ["Element", "Br. poslodavaca", {
                    role: "style"
                }],
                ["Mikropoduzetnici do 10 radnika", 77252, "#2794bf"],
                ["Mali poduzetnici - od 11 do 50 radnika", 5903, "#2794bf"],
                ["Srednji poduzetnici - 51 do 250 radnika", 925, "#2794bf"],
                ["Veliki poduzetnici - više od 251 radnika", 162, "color: #2794bf"]
            ]);

            var view = new google.visualization.DataView(data);
            view.setColumns([0, 1, {
                    calc: "stringify",
                    sourceColumn: 1,
                    type: "string",
                    role: "annotation"
                },
                2
            ]);

            var options = {
                title: "Broj korisnika potpore",
                width: 900,
                height: 700,
                bar: {
                    groupWidth: "95%"
                },
                legend: {
                    position: "none"
                },

                animation: {
                    startup: true,
                    duration: 1000,
                    easing: 'out'
                },
                haxis: {
                    textStyle: {
                        color: '#4f4f4f',
                        fontSize: 10,
                        fontName: 'Arial',
                    }
                }
            };
            var chart = new google.visualization.ColumnChart(document.getElementById("orm_broj_korisnika"));
            chart.draw(view, options);
        }

        function chartORMStrukturaKorisnika() {
            var data = new google.visualization.DataTable();
            data.addColumn('string', 'Veličina poduzetnika');
            data.addColumn('number', 'broj');
            data.addRows([
                ['Mikropoduzetnici do 10 radnika', 196624],
                ['Mali poduzetnici - od 11 do 50 radnika', 122126],
                ['Srednji poduzetnici - 51 do 250 radnika', 95795],
                ['Veliki poduzetnici - više od 251 radnika', 86122]

            ]);


            var options = {
                title: 'Struktura korisnika po broju radnika u potpori',
                width: 900,
                height: 600,
                animation: {
                    startup: true,
                    duration: 1000,
                    easing: 'out'
                },
                slices: {
                    0: {
                        color: '#2794bf'
                    },
                    1: {
                        color: '#f2b425'
                    },
                    2: {
                        color: '#4f4f4f'
                    },
                    3: {
                        color: '#d12026'
                    }
                },
            };

            var chart = new google.visualization.PieChart(document.getElementById('orm_struktura_korisnika'));
            chart.draw(data, options);
        }

