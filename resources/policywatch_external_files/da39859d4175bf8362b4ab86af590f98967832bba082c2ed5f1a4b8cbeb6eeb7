<script language="javascript" type="text/javascript">

var $j = jQuery.noConflict();
var brojKlase = "-1";
var redirectUrl;
var povezanoMisId = "-1";

$j(document).ready(function () {
	$j(".misljenjaNaslov a").contents().unwrap();

if($j("#povezanoMisljenje a") != null){
	
	$link 	= $j("#povezanoMisljenje a");
	$oldUrl 	= $link.attr('href');
	$newUrl = "/HR_Publikacije/Lists/mislenje33/Display.aspx?ID=" + getParameterByName("ID",$oldUrl);
	$link.prop("onclick", null);
	$link.attr('href',$newUrl);
	redirectUrl= $newUrl;
		
	//postavljanje naslova povezanog misljenja
	if($link.length > 0)
	{
//		brojKlase = $link[0].innerText;
		var index = $link[0].href.indexOf("?ID=");
		povezanoMisId = $link[0].href.substring(index+4);
		
		if(povezanoMisId != "-1")
			SP.SOD.executeFunc('sp.js', 'SP.ClientContext', getTitleForPovezanoMisljenje);
	}
}

var myList;
var collListItem;

// citanje naslova povezanog misljenja i postavljanje na formu
function getTitleForPovezanoMisljenje() {
	var ctx = new SP.ClientContext.get_current();
    myList = ctx.get_web().get_lists().getByTitle('popis_misljenja');
    //load list along with it's GUID and Title
    ctx.load(myList, 'Title', 'Id');
      
	//var brojKlase = "363-01/06-01/292";            
    var camlQuery = new SP.CamlQuery();
   	camlQuery.set_viewXml("<View><Query><Where><Eq><FieldRef Name='ID' /><Value Type='Counter'>" + povezanoMisId + "</Value></Eq></Where></Query></View>");
    collListItem = myList.getItems(camlQuery);
    ctx.load(collListItem);    //Urud%5Fx017e%5Fbeni%5Fx0020%5Fbroj
    ctx.executeQueryAsync(ExecutionSuccess, ExecutionFailed);
}

//response handler
function ExecutionSuccess(sender, args) {
	
	// poveznao mišljenje se skriva, ali je potrebno na formi kako bi se iz njega "uzeo" link na to misljenje
	$j(".hideMisljenje").hide();
		
    var listItemInfo = '';
    var listItemEnumerator = collListItem.getEnumerator();

    while (listItemEnumerator.moveNext()) {
    	var oListItem = listItemEnumerator.get_current();
                
		var povezanoMisTitle = oListItem.get_item('Title');
		var povezanoMisKlasa = oListItem.get_item('Broj_x0020_klase');
		var povezanoMisUrBroj = oListItem.get_item('Urud_x017e_beni_x0020_broj');
		var povezanoMisDatum = oListItem.get_item('Datum');
		povezanoMisDatum = povezanoMisDatum.format('dd.MM.yyyy');
		
		$j("#naslovPovezanogMisljenja").html("<a href="+ redirectUrl +">" + povezanoMisTitle + "</a><span> (Klasa: "+povezanoMisKlasa +"; UrBroj: "+ povezanoMisUrBroj +"; Datum: "+ povezanoMisDatum  +")</span>");
		//$j("#naslovPovezanogMisljenja").html(povezanoMisTitle);
    }
}

//error handler - generic
function ExecutionFailed(sender, args) {
	var listid = "Error";
    //alert(args.get_message());
}


	// Dohvaca vrijednost QueryString parametra po imenu. 
// name: Ime QueryString parametra. 
function getParameterByName(name,txtHref) { 
name = name.replace(/[\[]/, "\\\[").replace(/[\]]/, "\\\]"); 
var regexS = "[\\?&]" + name + "=([^&#]*)"; 
var regex = new RegExp(regexS); 
var results = regex.exec(txtHref); 
if (results == null) 
return ""; 
else 
return decodeURIComponent(results[1].replace(/\+/g, " ")); 
} 

$j(".s4-ql div > ul.root > li > ul > li").each(function()
   		{ 
	    	  
			var newClass="static";
			if($j(this)[0].innerText=='Mišljenja'){
			newClass="static selected";
			}
			$j(this).removeClass($j(this).attr('class')).addClass(newClass);
  
      	});
	


});
</script>
	
		
	

