<script type="text/javascript">
		$(document).ready(function(){
			
			$(".lightbox").lightbox();
			
			/*
			 * SIPTU Left Navigation Sitemap to Branch Class toggles 
			 ***************************************************************************************** */
					
			// If the current LI has a child then add arrow
			$("#leftnav li:has(ul)").addClass('hasChild');
			
			// If the current LI does not have child then dont add arrow
			$("#leftnav li").not(':has(ul)').removeClass('hasChild');
			
			// Add 'hideFromHere' class to Level1 Elements to hide below (but do not add to Level2+)
			$("#leftnav ul li ul li").not("#leftnav ul li ul li ul li").addClass("hideFromHere");
			
			// Find current page in tree
			var currentPage = document.location.href;
			$("#leftnav a").each(function(){

				if('https://' + window.location.hostname + $(this).attr("href") == currentPage){
				
					$(this).parents('.hasChild').addClass("openChild");
					$(this).parents('.hasChild').removeClass("hasChild");
					// Makes all parents with hasChild into openChild for trail
					
					
					$(this).parents('.hideFromHere:first').find('.hasChild').addClass('hideFromHere');
					$(this).parents('.hideFromHere:first').removeClass("hideFromHere");
					// Ensures all elements that have children that are not in the tree are hidden and unhide current branch tree
					
				} 
			});

			
		});
</script>


