		<script>
			(function() {
				let navbarUserDropdown = document.getElementById("navbarUserDropdown"),
					navbarFormLogin = navbarUserDropdown.querySelector('.blaize-form-login'),
					loginError = navbarFormLogin.querySelector('.blaize-error'),
					loginSuccess = navbarFormLogin.querySelector('.blaize-success');

				const blaizeRequest = function(url, action, data, callback) {
					grecaptcha.ready(function () {
						grecaptcha.execute(window.blaizeRecaptchaClientId, {action: action}).then(function (recaptchaToken) {
							let xhr = new (XMLHttpRequest || ActiveXObject)('MSXML2.XMLHTTP.3.0');
							xhr.open('POST', url, true);
							xhr.setRequestHeader('Content-type', 'application/json');
							xhr.setRequestHeader('Accept', 'application/json');
							xhr.setRequestHeader('X-Recaptcha-Token', recaptchaToken);
							xhr.onreadystatechange = function () {
								if (xhr.readyState === 4) {
									let response;
									try {
										response = JSON.parse(xhr.response);
									} catch (e) {
										response = xhr.response;
									}

									return callback(xhr.status, response);
								}
							};

							return (!data) ? xhr.send() : xhr.send(data);
						});
					});
				};

				navbarFormLogin.addEventListener('submit', e => {
					e.preventDefault();
					loginError.style.display = 'none';

					let submitBtn = navbarFormLogin.querySelector('.blaize-submit');
					submitBtn.insertAdjacentHTML('afterbegin', `<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>`);
					submitBtn.disabled = true;

					let inputFields = navbarFormLogin.querySelectorAll('.form-control');
					inputFields.forEach(input => {input.disabled = true});

					let identifier = navbarFormLogin.querySelector('input[name="email_address"]').value;
					let payloadData = JSON.stringify({
						identifiers: {
							email_address: identifier
						},
						validators: {
							password: navbarFormLogin.querySelector('input[name="password"]').value
						}
					});

					blaizeRequest('/blaize/login', 'login', payloadData, function(status, response) {

						const submitBtnSpinnerReset = () => {
							submitBtn.querySelector('.spinner-border').remove();
							submitBtn.disabled = false;
							inputFields.forEach(input => {input.disabled = false});
						}

						if (status === 200) {
							if (response.cookie) {
								document.cookie = response.cookie;
								location.reload(true);
							}
						} else if (status === 201) {
							if (response.message) {
								loginSuccess.innerHTML = response.message;
								loginSuccess.style.display = 'block';
								if (event.target.className.indexOf("passwordless") > -1) {
									navbarFormLogin.querySelector('.blaize-login-passwordless').style.display = 'none';
								} else {
									navbarFormLogin.querySelector('.blaize-submit').style.display = 'none';
								}
								navbarFormLogin.querySelector('.blaize-validators').style.display = 'none';
								navbarFormLogin.querySelector('.blaize-to-register').style.display = 'none';
							}
							submitBtnSpinnerReset();
						} else if (status === 401) {
							loginError.innerHTML = 'A megadott e-mail cím vagy jelszó érvénytelen.';
							loginError.style.display = 'block';
							submitBtnSpinnerReset();
						} else if (status === 404) {
							loginError.innerHTML = 'A felhasználó nem található.';
							loginError.style.display = 'block';
							submitBtnSpinnerReset();
						} else if (status === 429) {
							loginError.innerHTML = 'Hozzáférési jogosultsághoz kérjük, forduljon az adminhoz.';
							loginError.style.display = 'block';
							submitBtnSpinnerReset();
						} else {
							loginError.innerHTML = 'Hiba történt. Kérjük, próbálja később.';
							loginError.style.display = 'block';
							submitBtnSpinnerReset();
						}
					});
				});
			})();
		</script>
	</li>
	<li class="nav-item ml-1">
		<a href="/klasszis" class="nav-link btn btn-klasszis">
			<svg width="15" height="14" fill="none" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" clip-rule="evenodd" d="M9.834.5h2.02L15 4.462 11.853.5H9.834zM4.541 4.1L7.15.676H3.386L4.54 4.1zM3.086.854L.359 4.287h3.884L3.086.854zm3.962 11.832L4.361 4.637H.37l6.678 8.047zm.452.275l2.779-8.323H4.72L7.5 12.96zm3.138-8.323l-2.686 8.047 6.678-8.047h-3.992zm-5.805-.351L7.5.784l2.667 3.503H4.833zM7.85.676L10.46 4.1 11.614.676H7.85zm4.064.178l2.726 3.433h-3.883L11.914.854z" fill="#fff"></path></svg>
			<span>Klasszis</span>
		</a>
	</li>
