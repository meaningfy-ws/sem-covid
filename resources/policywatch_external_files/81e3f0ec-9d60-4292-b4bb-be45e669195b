  function changeUrl (ym, day) {
    year = ym.substr(0,4);
    month = ym.substr(4,2);
    change_url(year, month, day);
  }
  function change_url (year, month, day) {
    var par = new Array();
    
    //var d = new Date(year, month - 1, day);
    //var df = d.format('Ymd');
    var df = year * 10000 + month * 100 + day * 1;
    par.push('day='+df);
    //par.push('to='+df);
    window.document.location.href = '/adon.pl?act=Calendar&Mode=Src&'+par.join("&");
  }
