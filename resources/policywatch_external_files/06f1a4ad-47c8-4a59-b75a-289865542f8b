	function compareSakrij() {
		$('.compare-wrapper').hide();
	}
	
	function comparePocisti() {
		var getURL = '/_compare_pocisti/';
		$.post( getURL, function( data ) {
  			$( ".compare-wrapper" ).html( "" );
  			$( ".compare-wrapper" ).hide();
		});
	}
	
	function compareAdd(noviModel) {
		var getURL = '/_compare_dodaj/'+noviModel+'/';
		$.post( getURL, function( data ) {
  			$( ".compare-wrapper" ).html( data );
  			$( ".compare-wrapper" ).show();
		});
	}
	

	function compareDelete(kojiModel) {
		
		var getURL = '/_compare_obrisi/'+kojiModel+'/';
		$.post( getURL, function( data ) {
  			$( ".compare-wrapper" ).html( data );
		});
	}

</script>
  		

	
