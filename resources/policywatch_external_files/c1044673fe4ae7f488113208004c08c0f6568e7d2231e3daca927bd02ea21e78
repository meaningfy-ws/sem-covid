       <script src='https://inbusinessnews.reporter.com.cy/Scripts/sidebar.js?14_1_21_1'></script>
       <script>
            $(document).ready(function () {
                // hide #back-top first
                $("#back-top").hide();
                // fade in #back-top
                $(function () {
                    $(window).scroll(function () {
                        if ($(this).scrollTop() > 700) {
                            $('#back-top').fadeIn();
                        } else {
                            $('#back-top').fadeOut();
                        }
                    });

                    // scroll body to 0px on click
                    $('#back-top a').click(function () {
                        $('body,html').animate({
                            scrollTop: 0
                        }, 10);
                        return false;
                    });
                });
            });
        </script>
