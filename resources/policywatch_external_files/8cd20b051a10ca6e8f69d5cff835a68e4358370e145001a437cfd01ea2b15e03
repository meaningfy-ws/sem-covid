                setTimeout(function () {
            jQuery.ajax("system/cron/cron.txt", {complete: function (e) {
                var t = e.responseText || 0;
                parseInt(t) < Math.round(+(new Date) / 1e3) -86400 && jQuery.ajax("system/cron/cron.php")
            }})
        }, 5e3)
