	var check_if_required = function (arr1, arr2){

		var var_checked;
		var arr_field;
		var exit;
		$.each( arr1 , function( i, checkbox ){
			var_checked = ($(checkbox).is(':checked') ? true : false);
			//console.log(var_checked + '#');
			if (var_checked){
				//arr_field = arr2];
				$.each(arr1, function (ix,fieldnumber2){
					//console.log(fieldnumber2 + '.removeAttr("required") => unset');
					$(fieldnumber2).removeAttr('required');
				});
				exit = true;
				return ;
			}
		});
		if (exit) {
			//return;
		} else {
			$.each(arr1, function (ix,fieldnumber2){
				//console.log(fieldnumber2 + '.addAttr("required") => set');
				$(fieldnumber2).prop('required', true);
			});
		}
		//console.log("jetzt");
		$.each( arr1 , function( i, checkbox ){
			var_checked = ($(checkbox).is(':checked') ? true : false);
			arr_field = arr2[i];
			//console.log('----test'+ arr2[i]);
			$.each(arr_field, function (i,fieldnumber){
				//console.log(fieldnumber + '- var_checked: ' + var_checked);
				$('#ctrl_' + fieldnumber).prop('required', var_checked);
			});
		});
	}


	var formkuenstler1 = function (){

		var arr1 = ["#opt_50_0","#opt_50_1"];
		var arr2 = [[78,79,82],[80,81,83]];

		var var_checked;
		var arr_field;

		$.each( arr1 , function( i, checkbox ){
			var_checked = ($(checkbox).is(':checked') ? true : false);
			arr_field = arr2[i];
			$.each(arr_field, function (i,fieldnumber){
				$('#ctrl_' + fieldnumber).prop('required', var_checked);
			});
		});
	}




