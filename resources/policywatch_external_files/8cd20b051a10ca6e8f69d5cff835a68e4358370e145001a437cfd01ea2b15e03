	}

	function leftheight() {
		if ($("#left").length) {
			var l = $("#left");
			var lposition = l.position();

			var m = $("#main");
			var mposition = m.position();

			if (mposition.top == (lposition.top ) ) {
				var mainheight = $("#main").height();
				$("aside#left>.color").css('min-height',mainheight);
			} else {
				$("aside#left>.color").css("min-height", "");
			}
		}
	}


