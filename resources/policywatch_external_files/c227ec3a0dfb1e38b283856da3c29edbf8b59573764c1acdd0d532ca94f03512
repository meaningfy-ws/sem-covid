    <script>
        $(function () {

            if (document.cookie.indexOf("WRC_surveyCookie") < 0) {                
                
                setTimeout(function () { $("#surveyPopup").modal(); }, 1500);
                $("#surveyFormWrapper form").submit(function (e) {
                    e.preventDefault();
                    setSurveyCookie();
                    pT.formFn.SubmitForm(2);
                });
            }
        });

     

        function setSurveyCookie() {
            var date = new Date();
            date.setTime(date.getTime() + (365 * 24 * 60 * 60 * 1000));
            var expires = "; expires=" + date.toGMTString();
            document.cookie = "WRC_surveyCookie=true" + expires + "; path=/";
            document.getElementById("globalCookieBar").style.display = 'none';
        }
    </script>
