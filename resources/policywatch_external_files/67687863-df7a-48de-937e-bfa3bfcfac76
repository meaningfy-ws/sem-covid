<script>
      /* TUC Authy Rollout - START */
      setTimeout(function(){
      jQuery(document).ready(function()
      {
          // change the alert text and change its layout
          jQuery('.alert').each(function(){

            var str = jQuery(this).html();

            if(str.indexOf('attempts left after this you will be unable') > -1){

              // add custom class
              jQuery(this).parent().parent().addClass('twofa-custom-alert'); 
              
              // get only the last phrase
              str = str.split('</a>');
              str = str[1];

              // get the number of attempts
              var r = /\d+/g;
              var number_attempts = r.exec(str);
              
              // replace the text 
              jQuery(this).html('You have '+number_attempts+' attempts left to login without two-factor authentication (TFA). We advise you to install TFA as soon as possible.');
            }
          });

        // just make sure it will load everything first 
        setTimeout(function(){
            // check if the pop-up needs to be displayed or not
            const showPopUp = jQuery('[name="show_2fa_popup"]').val();

            if(showPopUp == 1)
            {
                // display the pop-up
                jQuery(".twofa_popup").show();
                
                // give it a fade effect
                setTimeout(function(){
                    jQuery(".twofa_popup").addClass('active'); 
                },100);        
            }

              // preventing it showing multiple times if the user clicks on the back button
              jQuery('[name="show_2fa_popup"]').val(0);

            // close pop-up when clicking outside it or on the close button
            window.onclick = function(event)
            {
                  //var modal = document.getElementById('twofa_popup');
                  var close_btn1 = document.getElementById('twofa_popup-close1');
                  var close_btn2 = document.getElementById('twofa_popup-close2');
            
                  //if (event.target == modal || event.target == close_btn)
                  if (event.target == close_btn1 || event.target == close_btn2)
                {
                    closePopUp();
                }
            }

            // calculate the position so the pop-up always keep centered
            let top = (jQuery(document).height()/2 - jQuery('.twofa_popup-wrapper').height()/2);

            // make sure it has at least 10px of padding (for small screens)
            if(top < 10){
                top = 10;
            }

            // set the padding (top and botttom)
            jQuery(".twofa_popup").css({
                'padding': top +'px 0'
            });

              jQuery(".twofa_popup-setupbtn").on("click", setUp2FA);

            function closePopUp()
            {   
                // add a fade out effect 
                jQuery(".twofa_popup").removeClass('active'); 

                // wait for the effect before actually hide the pop-up
                setTimeout(function(){
                    jQuery(".twofa_popup").hide();
                },300);
            }

              function setUp2FA()
              {
                var link = jQuery('.account-edit a').attr('href');
                link = link.split("/edit");
                link = link[0] + "/security/tfa";

                window.location.href = link;
              }
        },500);
      });

      // re-calculate the position when the screen is resized so the pop-up always keep centered
      jQuery(window).resize(function()
      {    
        let top = (jQuery(document).height()/2 - jQuery('.twofa_popup-wrapper').height()/2);

        // make sure it has at least 10px of padding (for small screens)
        if(top < 10){
            top = 10;
        }

        // set the padding (top and botttom)
        jQuery(".twofa_popup").css({
            'padding': top +'px 0'
        });
      });

            /* TUC Authy Rollout - END */
          if (getCookieValue("cookie-agreed") === '' || getCookieValue("cookie-on-analy") === '0') {

              var vid_url = jQuery(".media-oembed-content").attr('src');
              if(vid_url) {
               var query_string = vid_url.substr(vid_url.indexOf("&"));

                if(vid_url.search("https%3A//youtu.be") !== -1) {

                  jQuery('.media-oembed-content').attr('src', function(index, src) {

                      var query_string = src.substr(src.indexOf("&"));
                      var vid = src.replace('/media/oembed?url=https%3A//youtu.be', 'https://www.youtube-nocookie.com/embed/');
                      var vid = vid.replace("/media/oembed?url=https%3A//www.youtube.com/watch%3Fv%3D", "https://www.youtube-nocookie.com/embed/");
                      var vid = vid.replace('/media/oembed?url=youtu.be', 'https://www.youtube-nocookie.com/embed/');

                      return vid.replace(query_string, "");
                  })
                }
                if(vid_url.search("url=youtu.be") !== -1) {

                  jQuery('.media-oembed-content').attr('src', function(index, src) {

                      var query_string = src.substr(src.indexOf("&"));
                      var vid = src.replace('/media/oembed?url=youtu.be', 'https://www.youtube-nocookie.com/embed/');
                       var vid = vid.replace('/media/oembed?url=https%3A//youtu.be', 'https://www.youtube-nocookie.com/embed/');
                      var vid = vid.replace("/media/oembed?url=https%3A//www.youtube.com/watch%3Fv%3D", "https://www.youtube-nocookie.com/embed/");

                      return vid.replace(query_string, "");
                  })
                }

               
              if(vid_url.search("youtube.com") !== -1) {
               

                jQuery('.media-oembed-content').attr('src', function(index, src) {

                  var vid = src.replace("/media/oembed?url=https%3A//www.youtube.com/watch%3Fv%3D", "https://www.youtube-nocookie.com/embed/");
                  var vid = vid.replace('/media/oembed?url=https%3A//youtu.be', 'https://www.youtube-nocookie.com/embed/');
                  var vid = vid.replace('/media/oembed?url=youtu.be', 'https://www.youtube-nocookie.com/embed/');

                  if(src.search("%26") !== -1) {
                       var query_string1 = src.substr(src.indexOf("%26"));
                       return src.replace(query_string1, "");
                  }
                  else {
                    var query_string = src.substr(src.indexOf("&"));
                    return vid.replace(query_string, "");
                  }

                  })
              
                
              }
             
     
                 

                 
              
              }
          }

          function getCookieValue(a) {
            var b = document.cookie.match('(^|[^;]+)\\s*' + a + '\\s*=\\s*([^;]+)');
            return b ? b.pop() : '';
        }
      },500);

      
    </script>
</body>
</html>
