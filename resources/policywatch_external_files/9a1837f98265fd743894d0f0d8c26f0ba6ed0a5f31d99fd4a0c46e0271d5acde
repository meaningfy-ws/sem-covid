			});
			// Envoi du hit.
			tag.dispatch();
			
			// Pour le chargement du sommaire d'un texte JORF a la demande.
			function buildSummaryOnClick(){
				var data = {
					cid: "JORFTEXT000041768315",
					textCid : "JORFTEXT000041768315",
					searchedString : null,
					summaryFund : "JORF_TEXT"
				};
				buildSummary(data);
			}
		/*]]>*/
