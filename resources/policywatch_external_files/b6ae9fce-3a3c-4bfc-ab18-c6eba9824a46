                isEntryPage: true,
                schlagwort: [],
                inhaltid: ''
            };
            hg.trackingHandler = new hg.TrackingHandler(pageProps, emosProps, false);

            

            $('[data-econda-marker]').on('click', function () {
                var markerName = typeof this.attributes['data-econda-marker'] !== 'undefined' ? this.attributes['data-econda-marker'].value : null;
                var campaignName = typeof this.attributes['data-econda-campaign'] !== 'undefined' ? this.attributes['data-econda-campaign'].value : null;
                hg.trackingHandler.sendEcondaEvent(markerName, campaignName);
            });

            /**
             * binding click event only after initialising everything
             */
            $('[data-econda-targetname]').on('click', function () {
                var type = typeof this.attributes['data-econda-type'] !== 'undefined' ? this.attributes['data-econda-type'].value : "";
                var isHiddenPI = typeof this.attributes['data-econda-hiddenpi'] !== 'undefined';
                var campaignName = typeof this.attributes['data-econda-campaign'] !== 'undefined' ? this.attributes['data-econda-campaign'].value : null;
                var target = [this.attributes["data-econda-targetgroup"].value , this.attributes["data-econda-targetname"].value,1, "d"];
                hg.trackingHandler.sendEcondaTarget(target, type, isHiddenPI, campaignName);
            });

            
            window.addEventListener("flyoutFetched", function(e) {
                var htmlElements = $(".flyoutShopLink");
                htmlElements.unbind('click');
                htmlElements.on("click", function () {
                    var target = [this.attributes["data-econda-targetgroup"].value ,'Fehlerseite/404/'+ this.attributes["data-econda-destination"].value, 1, 'd'];
                    var type = this.attributes["data-econda-type"].value;
                    var isHiddenPI = this.attributes["data-econda-hiddenpi"].value;
                    hg.trackingHandler.sendEcondaTarget(target, type, isHiddenPI);
                });
            });

            
            window.addEventListener("pegaBoxesInitialized", function(e) {
                var htmlElement = $("#recommended-product-link, #prod-box-sticky-link, #prod-box-sticky-rel-link, #prod-box-main-link, #prod-box-main-rel-link");
                htmlElement.unbind('click');
                htmlElement.on("mouseup", function (event) {
                    var $htmlElement = $(htmlElement);
                    var target = [this.attributes["data-econda-targetgroup"].value, this.attributes["data-econda-targetname"].value, 1, 'd'];
                    var type =  typeof this.attributes["data-econda-type"] !== "undefined" ? this.attributes["data-econda-type"].value : null;
                    var isHiddenPI = typeof this.attributes['data-econda-hiddenpi'] !== 'undefined';
                    var interactionId = $htmlElement.data("interactionId");
                    var customerId = $htmlElement.data("customerId");
                    hg.trackingHandler.sendEcondaPegaInteraction(target, type, isHiddenPI, customerId, interactionId);
                });
            });
        });

